{
  "name": "dusk-and-dawn-discord-bot",
  "version": "0.1.0",
  "type": "module",
  "description": "Discord bot for the Dusk and Dawn RPG",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix && tsc --noEmit",
    "type-check": "tsc --noEmit",
    "deploy": "tsx src/deploy-commands.ts",
    "deploy:guild": "tsx src/deploy-commands.ts --guild",
    "deploy:clear": "tsx src/deploy-commands.ts --clear",
    "deploy:clear-guild": "tsx src/deploy-commands.ts --clear --guild"
  },
  "keywords": [
    "discord",
    "rpg",
    "dusk-and-dawn"
  ],
  "author": "Kurokamori",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "discord.js": "^14.18.0",
    "dotenv": "^17.2.4",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.55.0"
  }
}
