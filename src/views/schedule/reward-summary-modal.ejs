<!-- Reward Summary Modal -->
<div id="rewardSummaryModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Rewards Earned</h2>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="reward-summary-container">
                <!-- Main rewards section -->
                <div class="main-rewards mb-4">
                    <div class="flex items-center mb-3">
                        <div class="bg-amber-500/20 p-2 rounded-full mr-2">
                            <i class="fas fa-coins text-amber-400"></i>
                        </div>
                        <div>
                            <h6 class="text-xs text-gray-300">Coins</h6>
                            <p class="text-amber-400 font-bold" id="reward-summary-coins">+0</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="bg-green-500/20 p-2 rounded-full mr-2">
                            <i class="fas fa-star text-green-400"></i>
                        </div>
                        <div>
                            <h6 class="text-xs text-gray-300">Levels</h6>
                            <p class="text-green-400 font-bold" id="reward-summary-levels">+0</p>
                        </div>
                    </div>
                </div>
                
                <!-- Additional rewards section -->
                <div class="additional-rewards bg-gray-800/50 p-4 rounded-lg mb-4">
                    <h3 class="text-white text-lg mb-3">Additional Rewards</h3>
                    
                    <!-- Mission progress -->
                    <div class="mb-3 pb-3 border-b border-gray-700">
                        <div class="flex items-center mb-2">
                            <div class="bg-blue-500/20 p-2 rounded-full mr-2">
                                <i class="fas fa-tasks text-blue-400"></i>
                            </div>
                            <div>
                                <h6 class="text-sm text-white">Mission Progress</h6>
                                <p class="text-blue-400" id="reward-summary-mission-points">+0 points</p>
                            </div>
                        </div>
                        <p class="text-gray-400 text-sm" id="reward-summary-mission-text"></p>
                    </div>
                    
                    <!-- Garden points -->
                    <div class="mb-3 pb-3 border-b border-gray-700">
                        <div class="flex items-center mb-2">
                            <div class="bg-green-500/20 p-2 rounded-full mr-2">
                                <i class="fas fa-seedling text-green-400"></i>
                            </div>
                            <div>
                                <h6 class="text-sm text-white">Garden Harvest</h6>
                                <p class="text-green-400" id="reward-summary-garden-points">+0 points</p>
                            </div>
                        </div>
                        <p class="text-gray-400 text-sm" id="reward-summary-garden-text"></p>
                    </div>
                    
                    <!-- Boss damage -->
                    <div class="mb-3">
                        <div class="flex items-center mb-2">
                            <div class="bg-red-500/20 p-2 rounded-full mr-2">
                                <i class="fas fa-dragon text-red-400"></i>
                            </div>
                            <div>
                                <h6 class="text-sm text-white">Boss Damage</h6>
                                <p class="text-red-400" id="reward-summary-boss-damage">+0 damage</p>
                            </div>
                        </div>
                        <p class="text-gray-400 text-sm" id="reward-summary-boss-text"></p>
                    </div>
                </div>
                
                <div class="form-actions text-center">
                    <button type="button" class="btn-primary" id="closeSummaryBtn">Awesome!</button>
                </div>
            </div>
        </div>
    </div>
</div>
