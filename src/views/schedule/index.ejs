<% /* Set the title and other variables for the layout */ %>
<% title = 'Manage Schedule' %>

<div class="mt-20 mb-12">
    <span></span>
</div>

<!-- Inline script for navigation - ensures it works even if there are other JS errors -->
<script>
    window.addEventListener('DOMContentLoaded', function() {
        // Direct navigation function
        function navigateToSchedule(trainerId, date) {
            console.log(`Inline script navigating to: /manage_schedule?trainer_id=${trainerId}&date=${date}`);
            window.location.href = `/manage_schedule?trainer_id=${trainerId}&date=${date}`;
        }

        // Get elements
        const trainerSelect = document.getElementById('trainerSelect');
        const dateSelect = document.getElementById('dateSelect');

        // Add event listeners if elements exist
        if (trainerSelect) {
            trainerSelect.addEventListener('change', function() {
                if (dateSelect) {
                    navigateToSchedule(this.value, dateSelect.value);
                }
            });
        }

        if (dateSelect) {
            dateSelect.addEventListener('change', function() {
                if (trainerSelect) {
                    navigateToSchedule(trainerSelect.value, this.value);
                }
            });
        }
    });
</script>

<div class="container">
    <div class="schedule-wrapper">
        <div class="card">
            <div class="card-header">
                <h1 class="text-2xl font-bold mb-4">Manage Schedule</h1>

                <!-- Trainer Selection -->
                <div class="mb-6">
                    <label for="trainerSelect" class="block mb-2">Select Trainer:</label>
                    <select id="trainerSelect" class="input w-full md:w-1/3">
                        <% trainers.forEach(trainer => { %>
                            <option value="<%= trainer.id %>" <%= selectedTrainer.id == trainer.id ? 'selected' : '' %>>
                                <%= trainer.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Date Selection -->
                <div class="mb-6">
                    <label for="dateSelect" class="block mb-2">Select Date:</label>
                    <input type="date" id="dateSelect" class="input w-full md:w-1/3"
                           value="<%= selectedDate.toISOString().split('T')[0] %>">
                </div>
            </div>

            <div class="card-body">
                <!-- Tabs -->
                <div class="tabs mb-6">
                    <button class="tab-btn active" data-tab="tasks">Tasks</button>
                    <button class="tab-btn" data-tab="habits">Habits</button>
                    <button class="tab-btn" data-tab="templates">Templates</button>
                </div>

                <!-- Tab Content -->
                <div class="tab-content">
                    <!-- Tasks Tab -->
                    <div id="tasks-tab" class="tab-pane active">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-semibold">Tasks for <%= selectedDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></h2>
                            <button id="addTaskBtn" class="btn-primary">
                                <i class="fas fa-plus mr-2"></i> Add Task
                            </button>
                        </div>

                        <div class="task-list">
                            <% if (tasks && tasks.length > 0) { %>
                                <% tasks.forEach(task => { %>
                                    <div class="task-item <%= task.completed ? 'completed' : '' %>" data-id="<%= task.task_id %>">
                                        <div class="task-header">
                                            <div class="task-title-wrapper">
                                                <input type="checkbox" class="task-checkbox" <%= task.completed ? 'checked' : '' %>>
                                                <h3 class="task-title"><%= task.title %></h3>
                                            </div>
                                            <div class="task-actions">
                                                <button class="btn-icon edit-task-btn" title="Edit Task">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn-icon delete-task-btn" title="Delete Task">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="task-details">
                                            <% if (task.description) { %>
                                                <p class="task-description"><%= task.description %></p>
                                            <% } %>
                                            <div class="task-meta">
                                                <span class="task-difficulty <%= task.difficulty %>">
                                                    <%= task.difficulty.charAt(0).toUpperCase() + task.difficulty.slice(1) %>
                                                </span>
                                                <span class="task-rewards">
                                                    <i class="fas fa-star" title="Level Reward"></i> <%= task.level_reward %>
                                                    <i class="fas fa-coins ml-2" title="Coin Reward"></i> <%= task.coin_reward %>
                                                </span>
                                                <% if (task.bound_to_mon_id) { %>
                                                    <span class="task-bound">
                                                        <i class="fas fa-link" title="Bound to Monster"></i>
                                                        <%= task.monster_name || 'Monster #' + task.bound_to_mon_id %>
                                                    </span>
                                                <% } else if (task.bound_to_trainer) { %>
                                                    <span class="task-bound">
                                                        <i class="fas fa-link" title="Bound to Trainer"></i>
                                                        <%= selectedTrainer.name %>
                                                    </span>
                                                <% } %>
                                                <% if (task.reminder_enabled) { %>
                                                    <span class="task-reminder">
                                                        <i class="fas fa-bell" title="Reminder Set"></i>
                                                        <%= new Date(task.reminder_time).toLocaleTimeString() %>
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="empty-state">
                                    <p>No tasks scheduled for this day.</p>
                                    <button id="emptyAddTaskBtn" class="btn-primary mt-4">
                                        <i class="fas fa-plus mr-2"></i> Add Your First Task
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Habits Tab -->
                    <div id="habits-tab" class="tab-pane">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-semibold">Your Habits</h2>
                            <button id="addHabitBtn" class="btn-primary">
                                <i class="fas fa-plus mr-2"></i> Add Habit
                            </button>
                        </div>

                        <div class="habit-list">
                            <% if (habits && habits.length > 0) { %>
                                <div class="habit-categories mb-4">
                                    <button class="habit-filter active" data-filter="all">All</button>
                                    <button class="habit-filter" data-filter="daily">Daily</button>
                                    <button class="habit-filter" data-filter="weekly">Weekly</button>
                                </div>

                                <% habits.forEach(habit => { %>
                                    <div class="habit-item" data-id="<%= habit.habit_id %>" data-frequency="<%= habit.frequency %>">
                                        <div class="habit-header">
                                            <div class="habit-title-wrapper">
                                                <button class="complete-habit-btn <%= habit.last_completed && new Date(habit.last_completed).toDateString() === new Date().toDateString() ? 'completed' : '' %>">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <h3 class="habit-title"><%= habit.title %></h3>
                                            </div>
                                            <div class="habit-actions">
                                                <button class="btn-icon edit-habit-btn" title="Edit Habit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn-icon delete-habit-btn" title="Delete Habit">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="habit-details">
                                            <% if (habit.description) { %>
                                                <p class="habit-description"><%= habit.description %></p>
                                            <% } %>
                                            <div class="habit-meta">
                                                <span class="habit-frequency <%= habit.frequency %>">
                                                    <%= habit.frequency.charAt(0).toUpperCase() + habit.frequency.slice(1) %>
                                                </span>
                                                <span class="habit-difficulty <%= habit.difficulty %>">
                                                    <%= habit.difficulty.charAt(0).toUpperCase() + habit.difficulty.slice(1) %>
                                                </span>
                                                <span class="habit-streak">
                                                    <i class="fas fa-fire" title="Current Streak"></i> <%= habit.streak %>
                                                    <% if (habit.longest_streak > 0) { %>
                                                        <span class="text-xs ml-1">(Best: <%= habit.longest_streak %>)</span>
                                                    <% } %>
                                                </span>
                                                <span class="habit-rewards">
                                                    <i class="fas fa-star" title="Level Reward"></i> <%= habit.level_reward %>
                                                    <i class="fas fa-coins ml-2" title="Coin Reward"></i> <%= habit.coin_reward %>
                                                </span>
                                                <% if (habit.bound_to_mon_id) { %>
                                                    <span class="habit-bound">
                                                        <i class="fas fa-link" title="Bound to Monster"></i>
                                                        <%= habit.monster_name || 'Monster #' + habit.bound_to_mon_id %>
                                                    </span>
                                                <% } else if (habit.bound_to_trainer) { %>
                                                    <span class="habit-bound">
                                                        <i class="fas fa-link" title="Bound to Trainer"></i>
                                                        <%= selectedTrainer.name %>
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="empty-state">
                                    <p>You don't have any habits yet.</p>
                                    <button id="emptyAddHabitBtn" class="btn-primary mt-4">
                                        <i class="fas fa-plus mr-2"></i> Create Your First Habit
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Templates Tab -->
                    <div id="templates-tab" class="tab-pane">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-semibold">Task Templates</h2>
                            <button id="addTemplateBtn" class="btn-primary">
                                <i class="fas fa-plus mr-2"></i> Create Template
                            </button>
                        </div>

                        <div class="template-list">
                            <% if (templates && templates.length > 0) { %>
                                <% templates.forEach(template => { %>
                                    <div class="template-item" data-id="<%= template.template_id %>">
                                        <div class="template-header">
                                            <div class="template-title-wrapper">
                                                <h3 class="template-title"><%= template.name %></h3>
                                            </div>
                                            <div class="template-actions">
                                                <button class="btn-primary apply-template-btn" title="Apply Template">
                                                    <i class="fas fa-play mr-1"></i> Apply
                                                </button>
                                                <button class="btn-icon edit-template-btn" title="Edit Template">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn-icon delete-template-btn" title="Delete Template">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="template-details">
                                            <% if (template.description) { %>
                                                <p class="template-description"><%= template.description %></p>
                                            <% } %>
                                            <div class="template-tasks">
                                                <h4 class="text-sm font-semibold mb-2">Tasks in this template:</h4>
                                                <ul class="template-task-list">
                                                    <% const tasks = JSON.parse(template.tasks); %>
                                                    <% if (tasks && tasks.length > 0) { %>
                                                        <% tasks.forEach(task => { %>
                                                            <li class="template-task-item">
                                                                <span class="template-task-title"><%= task.title %></span>
                                                                <span class="template-task-difficulty <%= task.difficulty %>">
                                                                    <%= task.difficulty.charAt(0).toUpperCase() + task.difficulty.slice(1) %>
                                                                </span>
                                                            </li>
                                                        <% }) %>
                                                    <% } else { %>
                                                        <li class="template-task-item empty">No tasks in this template</li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                            <div class="template-settings-display">
                                                <div class="template-settings-badges">
                                                    <% if (template.preserve_times) { %>
                                                        <span class="template-setting-badge time-badge">
                                                            <i class="fas fa-clock"></i> Preserves times
                                                        </span>
                                                    <% } %>
                                                    <% if (template.preserve_notifications) { %>
                                                        <span class="template-setting-badge notification-badge">
                                                            <i class="fas fa-bell"></i> Preserves notifications
                                                        </span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="empty-state">
                                    <p>You don't have any task templates yet.</p>
                                    <p class="text-sm mt-2">Templates let you create a set of tasks that you can apply to any day with one click.</p>
                                    <button id="emptyAddTemplateBtn" class="btn-primary mt-4">
                                        <i class="fas fa-plus mr-2"></i> Create Your First Template
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<!-- Task Modal -->
<div id="taskModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="taskModalTitle">Add New Task</h2>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <form id="taskForm">
                <input type="hidden" id="taskId" name="task_id">
                <input type="hidden" id="trainerId" name="trainer_id" value="<%= selectedTrainer.id %>">

                <div class="form-group">
                    <label for="taskTitle">Task Title</label>
                    <input type="text" id="taskTitle" name="title" class="input" required>
                </div>

                <div class="form-group">
                    <label for="taskDescription">Description (Optional)</label>
                    <textarea id="taskDescription" name="description" class="input" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label for="taskDueDate">Due Date</label>
                    <input type="date" id="taskDueDate" name="due_date" class="input" required>
                </div>

                <div class="form-group">
                    <label for="taskDifficulty">Difficulty</label>
                    <select id="taskDifficulty" name="difficulty" class="input">
                        <option value="easy">Easy</option>
                        <option value="medium" selected>Medium</option>
                        <option value="hard">Hard</option>
                    </select>
                </div>

                <div class="form-row">
                    <div class="form-group half">
                        <label for="taskLevelReward">Level Reward</label>
                        <input type="number" id="taskLevelReward" name="level_reward" class="input" min="1" value="1">
                    </div>

                    <div class="form-group half">
                        <label for="taskCoinReward">Coin Reward</label>
                        <input type="number" id="taskCoinReward" name="coin_reward" class="input" min="0" value="100">
                    </div>
                </div>

                <div class="form-group">
                    <label>Reward Assignment</label>
                    <div class="reward-options">
                        <div class="reward-option">
                            <input type="radio" id="rewardNone" name="reward_assignment" value="none" checked>
                            <label for="rewardNone">Ask when completed</label>
                        </div>

                        <div class="reward-option">
                            <input type="radio" id="rewardTrainer" name="reward_assignment" value="trainer">
                            <label for="rewardTrainer">Assign to Trainer</label>
                            <input type="hidden" id="boundToTrainer" name="bound_to_trainer" value="false">
                        </div>

                        <div class="reward-option">
                            <input type="radio" id="rewardMon" name="reward_assignment" value="mon">
                            <label for="rewardMon">Assign to Monster</label>
                            <select id="boundToMonId" name="bound_to_mon_id" class="input" disabled>
                                <option value="">Select a monster</option>
                                <% monsters.forEach(monster => { %>
                                    <option value="<%= monster.mon_id %>"><%= monster.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox-group">
                        <input type="checkbox" id="reminderEnabled" name="reminder_enabled">
                        <label for="reminderEnabled">Enable Discord Reminder</label>
                    </div>

                    <div id="reminderTimeGroup" class="mt-2" style="display: none;">
                        <label for="reminderTime">Reminder Time</label>
                        <input type="datetime-local" id="reminderTime" name="reminder_time" class="input">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn-secondary" id="cancelTaskBtn">Cancel</button>
                    <button type="submit" class="btn-primary" id="saveTaskBtn">Save Task</button>
                </div>
            </form>
        </div>
    </div>
</div>

