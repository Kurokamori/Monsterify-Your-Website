                        method: 'DELETE'
                    });

                    if (response.ok) {
                        // Remove template from DOM
                        templateItem.remove();

                        // If no templates left, show empty state
                        const templateList = document.querySelector('.template-list');
                        if (templateList.children.length === 0) {
                            templateList.innerHTML = `
                                <div class="empty-state">
                                    <p>You don't have any task templates yet.</p>
                                    <p class="text-sm mt-2">Templates let you create a set of tasks that you can apply to any day with one click.</p>
                                    <button id="emptyAddTemplateBtn" class="btn-primary mt-4">
                                        <i class="fas fa-plus mr-2"></i> Create Your First Template
                                    </button>
                                </div>
                            `;

                            // Add event listener to new button
                            document.getElementById('emptyAddTemplateBtn').addEventListener('click', () => {
                                templateForm.reset();
                                document.getElementById('templateId').value = '';
                                document.getElementById('templateTasks').innerHTML = '';
                                templateModalTitle.textContent = 'Create Template';
                                templateModal.style.display = 'block';
                            });
                        }
                    } else {
                        alert('Failed to delete template');
                    }
                } catch (error) {
                    console.error('Error deleting template:', error);
                    alert('An error occurred while deleting the template');
                }
            }
        });
    });

    // Apply template buttons
    applyTemplateBtns.forEach(button => {
        button.addEventListener('click', () => {
            const templateItem = button.closest('.template-item');
            const templateId = templateItem.getAttribute('data-id');
            const templateName = templateItem.querySelector('.template-title').textContent;

            // Set template ID and name in apply modal
            document.getElementById('applyTemplateId').value = templateId;
            document.getElementById('applyTemplateName').textContent = templateName;

            // Set date to current selected date
            document.getElementById('applyTemplateDate').value = dateSelect.value;

            // Show apply modal
            applyTemplateModal.style.display = 'block';
        });
    });

    // Cancel apply template button
    if (cancelApplyTemplateBtn) {
        cancelApplyTemplateBtn.addEventListener('click', () => {
            applyTemplateModal.style.display = 'none';
        });
    }

    // Apply template form submission
    if (applyTemplateForm) {
        applyTemplateForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Get form data
            const formData = new FormData(applyTemplateForm);
            const templateId = formData.get('template_id');
            const dueDate = formData.get('due_date');

            try {
                const response = await fetch(`/templates/${templateId}/apply`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ due_date: dueDate })
                });

                if (response.ok) {
                    const tasks = await response.json();

                    // Close modal and navigate to the date where tasks were applied
                    applyTemplateModal.style.display = 'none';
                    window.location.href = `/manage_schedule?trainer_id=${trainerSelect.value}&date=${dueDate}`;
                } else {
                    const error = await response.json();
                    alert(`Error: ${error.error || 'Failed to apply template'}`);
                }
            } catch (error) {
                console.error('Error applying template:', error);
                alert('An error occurred while applying the template');
            }
        });
    }

    // Reward form elements are already defined above

    // Toggle monster select based on reward target
    if (rewardModalTrainer && rewardModalMon) {
        rewardModalTrainer.addEventListener('change', () => {
            rewardModalMonId.disabled = true;
        });

        rewardModalMon.addEventListener('change', () => {
            rewardModalMonId.disabled = false;
        });
    }

    // Cancel reward button
    if (cancelRewardBtn) {
        cancelRewardBtn.addEventListener('click', () => {
            rewardModal.style.display = 'none';
        });
    }

    // Reward form submission
    if (rewardForm) {
        rewardForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Get form data
            const formData = new FormData(rewardForm);
            const itemId = formData.get('item_id');
            const itemType = formData.get('item_type');
            const rewardTarget = formData.get('reward_target');
            const monId = formData.get('mon_id');

            // Validate form
            if (rewardTarget === 'mon' && !monId) {
                alert('Please select a monster');
                return;
            }

            try {
                let url;
                let data = {};

                if (itemType === 'habit') {
                    url = `/habits/${itemId}/complete`;
                    data = {
                        bound_to_trainer: rewardTarget === 'trainer',
                        bound_to_mon_id: rewardTarget === 'mon' ? monId : null
                    };
                } else if (itemType === 'task') {
                    url = `/tasks/${itemId}/complete`;
                    data = {
                        bound_to_trainer: rewardTarget === 'trainer',
                        bound_to_mon_id: rewardTarget === 'mon' ? monId : null
                    };
                }

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    const result = await response.json();

                    // Close modal
                    rewardModal.style.display = 'none';

                    // Mark item as completed in UI
                    if (itemType === 'habit') {
                        const habitItem = document.querySelector(`.habit-item[data-id="${itemId}"]`);
                        if (habitItem) {
                            const completeBtn = habitItem.querySelector('.complete-habit-btn');
                            if (completeBtn) {
                                completeBtn.classList.add('completed');
                            }

                            // Update streak display
                            const streakElement = habitItem.querySelector('.habit-streak');
                            if (streakElement && result.habit) {
                                streakElement.innerHTML = `<i class="fas fa-fire" title="Current Streak"></i> ${result.habit.streak}
                                    <span class="text-xs ml-1">(Best: ${result.habit.longest_streak})</span>`;
                            }

                            // Add bound indicator
                            const boundIndicator = document.createElement('div');
                            boundIndicator.className = 'habit-bound';
                            if (rewardTarget === 'trainer') {
                                boundIndicator.innerHTML = `<i class="fas fa-user" title="Bound to Trainer"></i>`;
                            } else {
                                const monster = document.querySelector(`#rewardModalMonId option[value="${monId}"]`);
                                const monsterName = monster ? monster.textContent : 'Monster';
                                boundIndicator.innerHTML = `<i class="fas fa-dragon" title="Bound to ${monsterName}"></i>`;
                            }

                            const habitHeader = habitItem.querySelector('.habit-header');
                            if (habitHeader && !habitHeader.querySelector('.habit-bound')) {
                                habitHeader.appendChild(boundIndicator);
                            }
                        }
                    } else if (itemType === 'task') {
                        const taskItem = document.querySelector(`.task-item[data-id="${itemId}"]`);
                        if (taskItem) {
                            taskItem.classList.add('completed');
                            const completeBtn = taskItem.querySelector('.complete-task-btn');
                            if (completeBtn) {
                                completeBtn.classList.add('completed');
                                completeBtn.innerHTML = '<i class="fas fa-check"></i>';
                            }
                        }
                    }

                    // Show reward notification
                    if (result.rewards) {
                        let rewardMessage = 'Rewards: ';
                        if (result.rewards.level_reward > 0) {
                            rewardMessage += `+${result.rewards.level_reward} XP`;
                        }
                        if (result.rewards.coin_reward > 0) {
                            rewardMessage += `${result.rewards.level_reward > 0 ? ', ' : ''}+${result.rewards.coin_reward} coins`;
                        }

                        alert(`${itemType.charAt(0).toUpperCase() + itemType.slice(1)} completed! ${rewardMessage}`);
                    }
                } else {
                    const error = await response.json();
                    alert(`Error: ${error.error || `Failed to complete ${itemType}`}`);
                }
            } catch (error) {
                console.error(`Error completing ${itemType}:`, error);
                alert(`An error occurred while completing the ${itemType}`);
            }
        });
    }
    } catch (error) {
        console.error('Error in schedule page script:', error);
    }
});
</script>