<div class="trainer-sidebar">
    <div class="sidebar-nav">
        <a href="/trainers/<%= trainer.id %>" class="sidebar-link <%= active === 'profile' ? 'active' : '' %>">Profile</a>
        <a href="/trainers/<%= trainer.id %>/pc" class="sidebar-link <%= active === 'pc' ? 'active' : '' %>">PC Boxes</a>
        <a href="/trainers/<%= trainer.id %>/boxes" class="sidebar-link <%= active === 'boxes' ? 'active' : '' %>">All Boxes</a>
        <a href="/trainers/<%= trainer.id %>/inventory" class="sidebar-link <%= active === 'inventory' ? 'active' : '' %>">Inventory</a>
        <a href="/trainers/<%= trainer.id %>/stats" class="sidebar-link <%= active === 'stats' ? 'active' : '' %>">Stats</a>
        <a href="/trainers/<%= trainer.id %>/achievements" class="sidebar-link <%= active === 'achievements' ? 'active' : '' %>">Achievements</a>
        <a href="/trainers/<%= trainer.id %>/additional-references" class="sidebar-link <%= active === 'additional-references' ? 'active' : '' %>">Additional References</a>

        <% if (locals.user && locals.user.discord_id && trainer.player_user_id && locals.user.discord_id.toString() === trainer.player_user_id) { %>
        <div class="sidebar-divider"></div>
        <a href="/trainers/<%= trainer.id %>/edit" class="sidebar-link owner-action <%= active === 'edit' ? 'active' : '' %>">Edit Trainer</a>
        <a href="/trainers/<%= trainer.id %>/edit-boxes" class="sidebar-link owner-action <%= active === 'edit-boxes' ? 'active' : '' %>">Edit Boxes</a>

        <% if (typeof all_monsters !== 'undefined' && all_monsters && all_monsters.length < 3) { %>
        <a href="/trainers/<%= trainer.id %>/roll-starters" class="sidebar-link owner-action highlight">Roll Starters</a>
        <% } %>
        <% } %>
    </div>
</div>