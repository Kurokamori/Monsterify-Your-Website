<div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
  <div class="p-4 bg-gray-700">
    <div class="flex items-center space-x-3">
      <img src="<%= trainer.image || '/images/default_trainer.png' %>" alt="<%= trainer.name %>" class="w-12 h-12 rounded-full object-cover border-2 border-gray-600">
      <div>
        <h3 class="text-white font-bold"><%= trainer.name %></h3>
        <p class="text-gray-300 text-sm">Level <%= trainer.level || 1 %></p>
      </div>
    </div>
  </div>

  <nav class="p-2">
    <ul class="space-y-1">
      <li>
        <a href="/trainers/<%= trainer.id %>" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 <%= active === 'profile' ? 'bg-gray-700 text-white' : '' %>">
          <i class="fas fa-user-circle w-5 h-5 mr-2"></i>
          <span>Profile</span>
        </a>
      </li>
      <li>
        <a href="/trainers/<%= trainer.id %>/monsters" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 <%= active === 'monsters' ? 'bg-gray-700 text-white' : '' %>">
          <i class="fas fa-dragon w-5 h-5 mr-2"></i>
          <span>Monsters</span>
        </a>
      </li>
      <li>
        <a href="/trainers/<%= trainer.id %>/items" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 <%= active === 'items' ? 'bg-gray-700 text-white' : '' %>">
          <i class="fas fa-box w-5 h-5 mr-2"></i>
          <span>Items</span>
        </a>
      </li>
      <li>
        <a href="/trainers/<%= trainer.id %>/additional-references" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 <%= active === 'additional-references' ? 'bg-gray-700 text-white' : '' %>">
          <i class="fas fa-bookmark w-5 h-5 mr-2"></i>
          <span>Additional References</span>
        </a>
      </li>
      <li>
        <a href="/trainers/<%= trainer.id %>/edit" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 <%= active === 'edit' ? 'bg-gray-700 text-white' : '' %>">
          <i class="fas fa-edit w-5 h-5 mr-2"></i>
          <span>Edit Trainer</span>
        </a>
      </li>
    </ul>
  </nav>
</div>