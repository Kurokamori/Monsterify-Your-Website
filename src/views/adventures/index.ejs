﻿﻿﻿﻿﻿﻿﻿﻿﻿<% /* Set the title and other variables for the layout */ %>
<% title = 'Adventures' %>

<div class="container mx-auto px-4">
  <div>
    <img src="https://i.imgur.com/t7lEdWL.jpeg" alt="Adventures Banner" class="location-banner w-full object-cover">
    <div class="flex flex-col items-center">
      <h2 class="text-2xl font-display font-bold text-center">Adventures</h2>
      <p class="text-center text-sm text-gray-200">Embark on exciting adventures and complete missions!</p>
    </div>
  </div>

<div class="location-grid">
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/A1gPwNf.png" alt="Adventures" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Adventures</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Embark on exciting adventures with your monsters.</p>
        <div class="flex justify-center mt-4">
          <a href="/adventures/start" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-hiking mr-1"></i> Start Adventure
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/yQIpUXx.png" alt="Missions" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Missions</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Complete missions to earn rewards and experience.</p>
        <div class="flex justify-center mt-4">
          <a href="/adventures/missions" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-tasks mr-1"></i> View Missions
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://imgur.com/L0jH235.png" alt="Boss Battles" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Boss Battles</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Challenge powerful bosses for rare rewards.</p>
        <div class="flex justify-center mt-4">
          <a href="/adventures/boss" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-dragon mr-1"></i> Challenge Boss
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/PefaLOv.jpeg" alt="Events" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Events</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Participate in limited-time events for special rewards.</p>
        <div class="flex justify-center mt-4">
          <a href="/adventures/event" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-calendar-alt mr-1"></i> View Events
          </a>
        </div>
      </div>
    </div>

    <!-- Competition Circuit -->
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/t7lEdWL.jpeg" alt="Competition Circuit" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Competition Circuit</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Test your skills in various competitions and tournaments!</p>
        <div class="grid grid-cols-2 gap-2 mt-4">
          <a href="/adventures/competition" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-trophy mr-1"></i> Competitions
          </a>
          <a href="/adventures/competition/friendly" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-handshake mr-1"></i> Friendly Match
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.text-shadow {
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.text-shadow-lg {
  text-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
}

.text-shadow-xl {
  text-shadow: 0 6px 12px rgba(0, 0, 0, 0.9);
}

.btn-primary {
  background-color: var(--accent-color);
  color: var(--background-color);
  font-weight: 500;
  transition: all 0.2s;
}

.btn-primary:hover {
  background-color: var(--accent-hover);
  transform: translateY(-2px);
}
</style>

