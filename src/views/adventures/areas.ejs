<% /* Set the title and other variables for the layout */ %>
<% title = `Select an Area in ${region.name}` %>

<div class="container mx-auto px-4 py-6">
  <!-- Header Section -->
  <div class="location-banner">
    <img src="<%= region.image_url || 'https://via.placeholder.com/1200x400?text=Region+Banner' %>" alt="<%= region.name %> Banner" class="w-full h-full object-cover">
    <div class="location-banner-overlay">
      <div class="flex items-center mb-4 w-full">
        <a href="/adventures/regions" class="btn-secondary hover:scale-105 transition-transform">
          <i class="fas fa-arrow-left mr-2"></i> Back to Regions
        </a>
      </div>
      <h1 class="location-banner-title"><%= region.name %></h1>
      <p class="location-banner-subtitle max-w-2xl">
        <%= region.description || 'Select an area within this region to begin your adventure.' %>
      </p>
    </div>
  </div>

  <!-- Message Display -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType || 'info' %> my-4">
      <%= message %>
    </div>
  <% } %>

  <!-- Areas Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
    <% if (areas && areas.length > 0) { %>
      <% areas.forEach(area => { %>
        <div class="area-card" style="border: 2px solid #8b5cf6; border-radius: 0.5rem; overflow: hidden; background-color: rgba(30, 41, 59, 0.8); transition: transform 0.2s, box-shadow 0.2s;">
          <div class="relative">
            <img src="<%= area.image_url || 'https://via.placeholder.com/400x200?text=Area+Image' %>"
                 alt="<%= area.name %>"
                 class="w-full h-48 object-cover">
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h3 class="text-xl font-bold text-white text-shadow-lg"><%= area.name %></h3>
              <%
              let difficultyColor = 'bg-blue-500';
              if (area.difficulty === 'easy') {
                difficultyColor = 'bg-green-500';
              } else if (area.difficulty === 'hard') {
                difficultyColor = 'bg-orange-500';
              } else if (area.difficulty === 'expert') {
                difficultyColor = 'bg-red-500';
              }
              %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full text-white <%= difficultyColor %>">
                <%= area.difficulty ? area.difficulty.charAt(0).toUpperCase() + area.difficulty.slice(1) : 'Normal' %> Difficulty
              </span>
            </div>
          </div>
          <div class="p-4">
            <p class="text-gray-300 mb-4 h-20 overflow-hidden">
              <%= area.description || 'No description available.' %>
            </p>
            <div class="flex justify-end">
              <a href="/adventures/create/<%= area.area_id %>" class="btn-primary hover:bg-purple-700 transition-colors">
                <i class="fas fa-hiking mr-2"></i> Start Adventure
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-span-full text-center py-8">
        <p class="text-gray-400">No areas available in this region. Please check back later or select another region.</p>
      </div>
    <% } %>
  </div>
</div>

<style>
  .area-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .area-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px -5px rgba(139, 92, 246, 0.4);
  }

  .text-shadow-lg {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-weight: 500;
    color: white;
    background-color: #4f46e5;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
    text-decoration: none;
  }

  .btn-secondary:hover {
    background-color: #4338ca;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-weight: 500;
    color: white;
    background-color: #8b5cf6;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
    text-decoration: none;
  }

  .btn-primary:hover {
    background-color: #7c3aed;
  }

  .location-banner {
    position: relative;
    height: 250px;
    border-radius: 0.5rem;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .location-banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.8));
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 2rem;
  }

  .location-banner-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }

  .location-banner-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  }

  .alert {
    padding: 1rem;
    border-radius: 0.375rem;
    margin-bottom: 1rem;
  }

  .alert-success {
    background-color: rgba(16, 185, 129, 0.2);
    border: 1px solid rgba(16, 185, 129, 0.4);
    color: #10b981;
  }

  .alert-error {
    background-color: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.4);
    color: #ef4444;
  }

  .alert-info {
    background-color: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.4);
    color: #3b82f6;
  }
</style>
