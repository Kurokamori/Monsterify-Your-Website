<% /* Set the title and other variables for the layout */ %>
<% title = 'View Adventure' %>

<div class="container mx-auto px-4 py-6">
  <!-- Header Section -->
  <div class="location-banner">
    <% if (adventure.area_image) { %>
      <img src="<%= adventure.area_image %>" alt="Adventure Banner" class="w-full h-full object-cover">
    <% } else { %>
      <img src="https://i.imgur.com/t7lEdWL.jpeg" alt="Adventure Banner" class="w-full h-full object-cover">
    <% } %>
    <div class="location-banner-overlay">
      <div class="flex items-center mb-4 w-full">
        <a href="/adventures/my" class="btn-secondary hover:scale-105 transition-transform">
          <i class="fas fa-arrow-left mr-2"></i> Back to My Adventures
        </a>
      </div>
      <h1 class="location-banner-title">
        <%= adventure.area_name ? adventure.area_name : 'Custom Adventure' %>
      </h1>
      <p class="location-banner-subtitle max-w-2xl">
        <% if (adventure.region_name) { %>
          <i class="fas fa-map-marker-alt mr-2"></i> <%= adventure.region_name %> Region
        <% } else { %>
          <i class="fas fa-magic mr-2"></i> Custom Adventure
        <% } %>
      </p>
    </div>
  </div>

  <!-- Message Display -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType || 'info' %> my-4">
      <%= message %>
    </div>
  <% } %>

  <!-- Adventure Details -->
  <div class="bg-gray-900 border border-purple-500 rounded-lg shadow-lg p-6 mt-8">
    <h2 class="text-2xl font-bold text-white mb-6">Adventure Details</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Left Column - Basic Info -->
      <div>
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-purple-300 mb-2">Status</h3>
          <div class="flex items-center">
            <% if (adventure.status === 'active') { %>
              <span class="bg-green-600 text-white text-sm px-3 py-1 rounded-full">Active</span>
            <% } else { %>
              <span class="bg-gray-600 text-white text-sm px-3 py-1 rounded-full">Completed</span>
            <% } %>
          </div>
        </div>
        
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-purple-300 mb-2">Timeline</h3>
          <p class="text-gray-300">
            <i class="fas fa-calendar-alt mr-2"></i> Started: <%= new Date(adventure.started_at).toLocaleString() %>
          </p>
          <% if (adventure.ended_at) { %>
            <p class="text-gray-300 mt-2">
              <i class="fas fa-flag-checkered mr-2"></i> Ended: <%= new Date(adventure.ended_at).toLocaleString() %>
            </p>
          <% } %>
        </div>
        
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-purple-300 mb-2">Location</h3>
          <% if (adventure.area_name && adventure.region_name) { %>
            <p class="text-gray-300">
              <i class="fas fa-map-marker-alt mr-2"></i> <%= adventure.area_name %>, <%= adventure.region_name %>
            </p>
          <% } else { %>
            <p class="text-gray-300">
              <i class="fas fa-magic mr-2"></i> Custom Adventure (No specific location)
            </p>
          <% } %>
        </div>
      </div>
      
      <!-- Right Column - Discord Info -->
      <div>
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-purple-300 mb-2">Discord Thread</h3>
          <p class="text-gray-300">
            <i class="fab fa-discord mr-2"></i> Thread ID: <%= adventure.thread_id %>
          </p>
          <p class="text-gray-300 mt-2">
            <i class="fas fa-hashtag mr-2"></i> Channel ID: <%= adventure.channel_id %>
          </p>
        </div>
        
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-purple-300 mb-2">Adventure ID</h3>
          <p class="text-gray-300">
            <i class="fas fa-fingerprint mr-2"></i> <%= adventure.adventure_id %>
          </p>
        </div>
        
        <% if (isStarter && adventure.status === 'active') { %>
          <div class="mt-6">
            <button id="endAdventureBtn" class="btn-danger w-full">
              <i class="fas fa-flag-checkered mr-2"></i> End Adventure
            </button>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Discord Link -->
    <div class="mt-8 p-4 bg-indigo-900/30 border border-indigo-800 rounded-md">
      <h3 class="text-lg font-semibold text-indigo-300 mb-2">Join the Adventure</h3>
      <p class="text-gray-300 mb-4">
        This adventure is taking place in a Discord thread. To participate, join the Discord server and find the thread with ID <%= adventure.thread_id %>.
      </p>
      <div class="flex justify-center">
        <a href="https://discord.com/channels/<%= adventure.channel_id %>/<%= adventure.thread_id %>" target="_blank" class="btn-discord">
          <i class="fab fa-discord mr-2"></i> Open in Discord
        </a>
      </div>
    </div>
  </div>
</div>

<% if (isStarter && adventure.status === 'active') { %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const endAdventureBtn = document.getElementById('endAdventureBtn');
    
    endAdventureBtn.addEventListener('click', async function() {
      if (!confirm('Are you sure you want to end this adventure? This action cannot be undone.')) {
        return;
      }
      
      endAdventureBtn.disabled = true;
      endAdventureBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Ending...';
      
      try {
        const response = await fetch(`/api/adventures/<%= adventure.adventure_id %>/end`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await response.json();
        
        if (data.success) {
          window.location.href = '/adventures/my?message=Adventure ended successfully&messageType=success';
        } else {
          alert('Error: ' + (data.message || 'Failed to end adventure'));
          endAdventureBtn.disabled = false;
          endAdventureBtn.innerHTML = '<i class="fas fa-flag-checkered mr-2"></i> End Adventure';
        }
      } catch (error) {
        console.error('Error ending adventure:', error);
        alert('An error occurred while ending the adventure. Please try again.');
        endAdventureBtn.disabled = false;
        endAdventureBtn.innerHTML = '<i class="fas fa-flag-checkered mr-2"></i> End Adventure';
      }
    });
  });
</script>
<% } %>

