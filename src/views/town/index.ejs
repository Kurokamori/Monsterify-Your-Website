      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Work on the farm and breed your monsters.</p>
        <div class="grid grid-cols-2 gap-2 mt-4">
          <a href="/town/visit/farm/work" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-tractor mr-1"></i> Work Farm
          </a>
          <a href="/town/visit/farm/breed" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-heart mr-1"></i> Breed Monsters
          </a>
        </div>
      </div>
    </div>

        <!-- Antique Store -->
