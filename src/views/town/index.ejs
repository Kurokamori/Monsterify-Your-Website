<% /* Set the title and other variables for the layout */ %>
<% title = 'Visit Town' %>

<div class="container mx-auto px-4">
  <div>
    <img src="https://i.imgur.com/DP1nFn2.png" alt="Town Banner" class="location-banner w-full object-cover">
    <div class="flex flex-col items-center">
      <h2 class="text-2xl font-display font-bold text-center">Town Square</h2>
      <p class="text-center text-sm text-gray-200">Explore the town and interact with various locations!</p>
    </div>
  </div>

<div class="location-grid">
    <!-- Trade Center -->
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/XlGrD6J.jpeg" alt="Trade Center" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Trade Center</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Trade your monsters and items with other trainers.</p>
        <div class="grid grid-cols-2 gap-2 mt-4">
          <a href="/town/visit/trade/mons" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-exchange-alt mr-1"></i> Trade Mons
          </a>
          <a href="/town/visit/trade/items" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-box mr-1"></i> Trade Items
          </a>
        </div>
      </div>
    </div>

    <!-- Garden -->
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/Z5dNHXv.jpeg" alt="Garden" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Garden</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Tend to your garden and harvest fresh produce.</p>
        <div class="grid grid-cols-2 gap-2 mt-4">
          <a href="/town/visit/garden/tend" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-seedling mr-1"></i> Tend Garden
          </a>
          <a href="/town/visit/garden/harvest" class="btn-primary text-center py-2 px-3 rounded text-sm">
            <i class="fas fa-carrot mr-1"></i> Harvest
          </a>
        </div>
      </div>
    </div>

    <!-- Farm -->
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/fztdYkJ.png" alt="Farm" class="w-full h-48 object-cover rounded-t-lg">
