<% /* Set the title and other variables for the layout */ %>
<% title = 'Mega Mart' %>

<div class="container mx-auto px-4">
  <div>
    <img src="https://i.imgur.com/RmKySNO.png" alt="Mega Mart Banner" class="location-banner w-full object-cover rounded-lg shadow-lg">
    <div class="flex flex-col items-center">
      <div class="flex items-center mb-4 w-full">
        <a href="/town/visit" class="btn-secondary mr-4 hover:scale-105 transition-transform">
          <i class="fas fa-arrow-left mr-2"></i> Back to Town
        </a>
        <h2 class="text-2xl font-display font-bold text-center text-amber-400 text-shadow-lg">Mega Mart</h2>
      </div>
      <p class="text-center text-sm text-gray-200 mb-4">The one-stop shop for all your monster training needs.</p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
    <!-- Item Use Section -->
    <div class="location-card overflow-hidden">
      <div class="relative">
        <img src="https://i.imgur.com/RmKySNO.png" alt="Item Use" class="w-full h-48 object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Item Use</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 mb-4">Use your items to enhance your monsters' abilities, stats, and more.</p>

        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <h4 class="text-amber-400 mb-2 font-medium">Available Services</h4>
          <ul class="text-sm text-gray-300 space-y-2 pl-4">
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Stat boosting items</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Evolution items</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Special effect items</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Type-changing items</li>
          </ul>
        </div>

        <a href="/town/visit/megamart/item_use" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
          <i class="fas fa-box-open mr-1"></i> Use Items
        </a>
      </div>
    </div>

    <!-- Ability Master Section -->
    <div class="location-card overflow-hidden">
      <div class="relative">
        <img src="https://i.imgur.com/5cgcSGC.png" alt="Ability Master" class="w-full h-48 object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Ability Master</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 mb-4">Change or unlock your monsters' hidden abilities with the help of our expert.</p>

        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <h4 class="text-amber-400 mb-2 font-medium">Services Offered</h4>
          <ul class="text-sm text-gray-300 space-y-2 pl-4">
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Ability capsule use</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Hidden ability unlock</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Ability analysis</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Ability compatibility check</li>
          </ul>
        </div>

        <a href="/town/visit/megamart/ability_master" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
          <i class="fas fa-bolt mr-1"></i> Visit Ability Master
        </a>
      </div>
    </div>

    <!-- Held Item Changing Room Section -->
    <div class="location-card overflow-hidden">
      <div class="relative">
        <img src="https://i.imgur.com/wX9iPwP.png" alt="Held Item Changing Room" class="w-full h-48 object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Held Item Room</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 mb-4">Equip, remove, or swap held items between your monsters for strategic advantages.</p>

        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <h4 class="text-amber-400 mb-2 font-medium">Available Options</h4>
          <ul class="text-sm text-gray-300 space-y-2 pl-4">
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Equip new held items</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Remove current held items</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Swap items between monsters</li>
            <li><i class="fas fa-check-circle text-green-400 mr-2"></i> Item effect information</li>
          </ul>
        </div>

        <a href="/town/visit/megamart/held_item_room" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
          <i class="fas fa-hand-holding mr-1"></i> Manage Held Items
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add hover effects to card sections
    const cardSections = document.querySelectorAll('.card-section');
    cardSections.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-5px)';
        this.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.3)';
        this.style.borderColor = 'rgba(214, 163, 57, 0.3)';
      });
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 16px rgba(0, 0, 0, 0.2)';
        this.style.borderColor = 'rgba(55, 65, 81, 0.3)';
      });
    });

    // Add hover effects to service icons
    const serviceIcons = document.querySelectorAll('.service-icon');
    serviceIcons.forEach(icon => {
      icon.addEventListener('mouseenter', function() {
        this.style.transform = 'scale(1.1)';
        this.style.borderColor = 'rgba(214, 163, 57, 0.5)';
      });
      icon.addEventListener('mouseleave', function() {
        this.style.transform = 'scale(1)';
        this.style.borderColor = 'rgba(214, 163, 57, 0.3)';
      });
    });
  });
</script>