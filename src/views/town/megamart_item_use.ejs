        // Add stat for Bottle Cap
        if (itemName === 'Bottle Cap') {
          requestData.stat = selectedStat;
        }

        // Call API to use item
        const response = await fetch('/api/megamart/use-item', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(requestData)
        });

        const result = await response.json();

        if (result.success) {
          // Show success popup
          showSuccessPopup(result.message);

          // Update monster in the list
          const index = monsters.findIndex(m => m.mon_id == monsterId);
          if (index !== -1) {
            monsters[index] = result.updatedMonster;
          }

          // Update inventory (reduce item count)
          if (inventoryCategory && trainerInventory[inventoryCategory]) {
            if (trainerInventory[inventoryCategory][itemName] > 0) {
              trainerInventory[inventoryCategory][itemName] -= 1;
            }
          }

          // Update item quantities in UI
          updateItemQuantities();

          // Reset form
          resetForm();

          // Refresh monster list
          renderMonsters(monsters);
        } else {
          // Show error message
          showStatus(result.message, 'error');
        }
      } catch (error) {
        console.error('Error using item:', error);
        showStatus('An error occurred while using the item', 'error');
      } finally {
        // Reset button
        useItemBtn.disabled = true;
        useItemBtn.innerHTML = '<i class="fas fa-check-circle mr-2"></i> Use Item';
      }
    }

    // Show status message
    function showStatus(message, type) {
      statusText.textContent = message;
      statusMessage.className = 'mb-6';

      if (type === 'success') {
        statusMessage.classList.add('bg-green-800/50', 'text-green-300');
      } else if (type === 'error') {
        statusMessage.classList.add('bg-red-800/50', 'text-red-300');
      } else {
        statusMessage.classList.add('bg-blue-800/50', 'text-blue-300');
      }

      statusMessage.classList.remove('hidden');

      // Auto-hide after 5 seconds
      setTimeout(() => {
        statusMessage.classList.add('hidden');
      }, 5000);
    }

    // Reset form after successful submission
    function resetForm() {
      // Reset selections
      selectedMonster = null;
      selectedItem = null;
      selectedStat = null;

      // Reset UI elements
      document.querySelectorAll('.inventory-item[data-monster-id]').forEach(c => c.classList.remove('ring', 'ring-amber-400'));
      itemCards.forEach(c => c.classList.remove('ring', 'ring-amber-400'));
      document.querySelectorAll('.stat-btn').forEach(b => b.classList.remove('active'));

      // Reset preview
      previewPlaceholder.classList.remove('hidden');
      previewContent.classList.add('hidden');

      // Remove stat selector if it exists
      const statSelector = document.getElementById('stat-selector');
      if (statSelector) {
        statSelector.remove();
      }

      // Reset button
      useItemBtn.disabled = true;
    }

    // Show success popup
    function showSuccessPopup(message) {
      // Create popup elements
      const popup = document.createElement('div');
      popup.className = 'fixed inset-0 flex items-center justify-center z-50';

      const overlay = document.createElement('div');
      overlay.className = 'absolute inset-0 bg-black/70';
      overlay.addEventListener('click', () => document.body.removeChild(popup));

      const content = document.createElement('div');
      content.className = 'bg-gray-800 rounded-lg p-6 shadow-xl max-w-md w-full relative z-10 border border-amber-500/30';

      // Create header with success icon
      const header = document.createElement('div');
      header.className = 'flex items-center mb-4';

      const iconContainer = document.createElement('div');
      iconContainer.className = 'w-10 h-10 rounded-full bg-green-500/20 flex items-center justify-center mr-3';

      const icon = document.createElement('i');
      icon.className = 'fas fa-check text-green-500';
      iconContainer.appendChild(icon);

      const title = document.createElement('h3');
      title.className = 'text-xl font-bold text-white';
      title.textContent = 'Success!';

      header.appendChild(iconContainer);
      header.appendChild(title);

      // Create message
      const messageEl = document.createElement('p');
      messageEl.className = 'text-gray-300 mb-6';
      messageEl.textContent = message;

      // Create close button
      const button = document.createElement('button');
      button.className = 'btn-primary w-full py-2 px-4 rounded-lg';
      button.textContent = 'Continue';
      button.addEventListener('click', () => document.body.removeChild(popup));

      // Assemble popup
      content.appendChild(header);
      content.appendChild(messageEl);
      content.appendChild(button);

      popup.appendChild(overlay);
      popup.appendChild(content);

      // Add to document
      document.body.appendChild(popup);

      // Focus the button
      button.focus();

      // Auto-close after 10 seconds
      setTimeout(() => {
        if (document.body.contains(popup)) {
          document.body.removeChild(popup);
        }
      }, 10000);
    }

    // Event Listeners

    // Trainer select change event
    trainerSelect.addEventListener('change', function() {
      trainerId = this.value;
      if (trainerId) {
        // Reset selections
        selectedMonster = null;
        selectedItem = null;
        selectedStat = null;

        // Reset UI
        document.querySelectorAll('.inventory-item[data-monster-id]').forEach(c => c.classList.remove('ring', 'ring-amber-400'));
        itemCards.forEach(c => c.classList.remove('ring', 'ring-amber-400'));
        // Get current stat buttons if they exist
        const currentStatButtons = document.querySelectorAll('.stat-btn');
        if (currentStatButtons) {
          currentStatButtons.forEach(b => b.classList.remove('active'));
        }

        previewPlaceholder.classList.remove('hidden');
        previewContent.classList.add('hidden');

        const statSelector = document.getElementById('stat-selector');
        if (statSelector) {
          statSelector.classList.add('hidden');
        }

        useItemBtn.disabled = true;

        // Fetch data for the selected trainer
        fetchMonsters(trainerId);
        fetchInventory(trainerId);
      } else {
        monsterList.innerHTML = '<div class="text-center text-gray-400 py-4">Please select a trainer</div>';
      }
    });

    // Item card click events
    itemCards.forEach(card => {
      card.addEventListener('click', function() {
        // Check if item is in inventory
        const itemName = this.dataset.itemName;
        let quantity = 0;

        // Special case for vitamins and bottle caps - they should be in inv_items
        if ((itemName === 'Calcium' || itemName === 'Protein' || itemName === 'Iron' ||
             itemName === 'Zinc' || itemName === 'Carbos' || itemName === 'HP UP' ||
             itemName === 'Bottle Cap' || itemName === 'Golden Bottle Cap') &&
            trainerInventory.inv_items) {
          quantity = trainerInventory.inv_items[itemName] || 0;
        } else {
          // Check all inventory categories for the item
          if (trainerInventory.inv_items && itemName in trainerInventory.inv_items) {
            quantity = trainerInventory.inv_items[itemName];
          } else if (trainerInventory.inv_balls && itemName in trainerInventory.inv_balls) {
            quantity = trainerInventory.inv_balls[itemName];
          } else if (trainerInventory.inv_berries && itemName in trainerInventory.inv_berries) {
            quantity = trainerInventory.inv_berries[itemName];
          } else if (trainerInventory.inv_pastries && itemName in trainerInventory.inv_pastries) {
            quantity = trainerInventory.inv_pastries[itemName];
          } else if (trainerInventory.inv_evolution && itemName in trainerInventory.inv_evolution) {
            quantity = trainerInventory.inv_evolution[itemName];
          } else if (trainerInventory.inv_antiques && itemName in trainerInventory.inv_antiques) {
            quantity = trainerInventory.inv_antiques[itemName];
          } else if (trainerInventory.inv_helditems && itemName in trainerInventory.inv_helditems) {
            quantity = trainerInventory.inv_helditems[itemName];
          }
        }

        if (quantity <= 0) {
          showStatus(`You don't have any ${itemName} in your inventory`, 'error');
          return;
        }

        itemCards.forEach(c => c.classList.remove('ring', 'ring-amber-400'));
        this.classList.add('ring', 'ring-amber-400');

        selectedItem = this;
        updatePreview();
      });
    });

    // Stat button click events are added dynamically when the stat selector is created

    // Search and filter events
    monsterSearch.addEventListener('input', filterMonsters);
    itemSearch.addEventListener('input', filterItems);

    // No type filters anymore

    // Item filter buttons
    itemFilters.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        itemFilters.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        filterItems();
      });
    });

    // Use item button
    useItemBtn.addEventListener('click', function(e) {
      e.preventDefault();
      useItem();
    });

    // Form submission
    itemUseForm.addEventListener('submit', function(e) {
      e.preventDefault();
      useItem();
    });

    // Initialize
    fetchTrainers();

    // Add hover effects to inventory items
    document.querySelectorAll('.inventory-item').forEach(item => {
      item.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-2px)';
        this.style.boxShadow = '0 6px 12px rgba(0, 0, 0, 0.2)';
      });

      item.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = 'none';
      });
    });
  });
</script>
