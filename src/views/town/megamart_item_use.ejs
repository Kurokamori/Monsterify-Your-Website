<script>
  document.addEventListener('DOMContentLoaded', function() {
    // DOM Elements
    const trainerSelect = document.getElementById('trainer-select');
    const monsterList = document.getElementById('monster-list');
    const itemCards = document.querySelectorAll('.inventory-item');
    const monsterSearch = document.getElementById('monster-search');
    const itemSearch = document.getElementById('item-search');
    const itemFilters = document.querySelectorAll('.item-filters button');
    const previewPlaceholder = document.getElementById('preview-placeholder');
    const previewContent = document.getElementById('preview-content');
    const previewMonsterImg = document.getElementById('preview-monster-img').querySelector('img');
    const previewMonsterName = document.getElementById('preview-monster-name');
    const previewMonsterDetails = document.getElementById('preview-monster-details');
    const previewItemIcon = document.getElementById('preview-item-icon');
    const previewItemName = document.getElementById('preview-item-name');
    const previewItemEffect = document.getElementById('preview-item-effect');
    const previewResult = document.getElementById('preview-result');
    // statSelector is created dynamically, so we'll get it when needed
    const statButtons = document.querySelectorAll('.stat-btn');
    const useItemBtn = document.getElementById('use-item-btn');
    const statusMessage = document.getElementById('status-message');
    const statusText = document.getElementById('status-text');
    const itemUseForm = document.getElementById('item-use-form');

    // State variables
    let selectedMonster = null;
    let selectedItem = null;
    let selectedStat = null;
    let monsters = [];
    let trainers = [];
    let trainerId = null;
    let trainerInventory = [];

    // Fetch trainers
    async function fetchTrainers() {
      try {
        const response = await fetch('/api/trainers/user');
        if (!response.ok) {
          throw new Error('Failed to fetch trainers');
        }

        const data = await response.json();
        console.log('Trainer data:', data); // Debug log

        // Handle different response formats
        if (Array.isArray(data)) {
          trainers = data;
        } else if (data && typeof data === 'object') {
          // If it's a single trainer object
          trainers = [data];
        } else {
          throw new Error('Unexpected response format');
        }

        if (trainers.length === 0) {
          showStatus('No trainers found', 'error');
          return;
        }

        // Clear existing options
        while (trainerSelect.options.length > 1) {
          trainerSelect.remove(1);
        }

        // Populate trainer select dropdown
        trainers.forEach(trainer => {
          const option = document.createElement('option');
          option.value = trainer.id;
          option.textContent = trainer.name || `Trainer #${trainer.id}`;
          trainerSelect.appendChild(option);
        });

        // If there's only one trainer, select it automatically
        if (trainers.length === 1) {
          trainerSelect.value = trainers[0].id;
          trainerId = trainers[0].id;
          fetchMonsters(trainerId);
          fetchInventory(trainerId);
        }
      } catch (error) {
        console.error('Error fetching trainers:', error);
        showStatus('Error fetching trainers: ' + error.message, 'error');
      }
    }

    // Fetch trainer's inventory
    async function fetchInventory(trainerId) {
      if (!trainerId) {
        console.error('No trainer ID provided for inventory fetch');
        return;
      }

      try {
        const response = await fetch(`/api/trainers/${trainerId}/inventory`);
        if (!response.ok) {
          throw new Error('Failed to fetch inventory');
        }

        const data = await response.json();
        console.log('Inventory data:', data);

        // Parse inventory data
        const parsedInventory = {
          inv_items: {},
          inv_balls: {},
          inv_berries: {},
          inv_pastries: {},
          inv_evolution: {},
          inv_eggs: {},
          inv_antiques: {},
          inv_helditems: {},
          inv_seals: {}
        };

        // Handle different response formats
        if (data && typeof data === 'object') {
          // Process each inventory category
          const categories = ['inv_items', 'inv_balls', 'inv_berries', 'inv_pastries',
                             'inv_evolution', 'inv_eggs', 'inv_antiques', 'inv_helditems', 'inv_seals'];

          for (const category of categories) {
            let categoryData;

            // Find the category data in the response
            if (data[category]) {
              categoryData = data[category];
            } else if (data.inventory && data.inventory[category]) {
              categoryData = data.inventory[category];
            } else if (data.success && data.trainer && data.trainer.inventory && data.trainer.inventory[category]) {
              categoryData = data.trainer.inventory[category];
            } else if (data.success && data.trainer && data.trainer[category]) {
              categoryData = data.trainer[category];
            }

            // Parse the category data if it's a string
            if (categoryData) {
              if (typeof categoryData === 'string') {
                try {
                  parsedInventory[category] = JSON.parse(categoryData);
                } catch (e) {
                  console.error(`Error parsing ${category}:`, e);
                }
              } else if (typeof categoryData === 'object') {
                parsedInventory[category] = categoryData;
              }
            }
          }
        }

        console.log('Parsed inventory:', parsedInventory);
        trainerInventory = parsedInventory;

        // Update item quantities in the UI
        updateItemQuantities();
      } catch (error) {
        console.error('Error fetching inventory:', error);
        showStatus('Error fetching inventory: ' + error.message, 'error');
      }
    }

    // Update item quantities in the UI based on inventory
    function updateItemQuantities() {
      if (!trainerInventory) return;

      itemCards.forEach(card => {
        const itemName = card.dataset.itemName;
        let quantity = 0;

        // Special case for vitamins and bottle caps - they should be in inv_items
        if ((itemName === 'Calcium' || itemName === 'Protein' || itemName === 'Iron' ||
             itemName === 'Zinc' || itemName === 'Carbos' || itemName === 'HP UP' ||
             itemName === 'Bottle Cap' || itemName === 'Golden Bottle Cap') &&
            trainerInventory.inv_items) {
          quantity = trainerInventory.inv_items[itemName] || 0;
        } else {
          // Check all inventory categories for the item
          if (trainerInventory.inv_items && itemName in trainerInventory.inv_items) {
            quantity = trainerInventory.inv_items[itemName];
          } else if (trainerInventory.inv_balls && itemName in trainerInventory.inv_balls) {
            quantity = trainerInventory.inv_balls[itemName];
          } else if (trainerInventory.inv_berries && itemName in trainerInventory.inv_berries) {
            quantity = trainerInventory.inv_berries[itemName];
          } else if (trainerInventory.inv_pastries && itemName in trainerInventory.inv_pastries) {
            quantity = trainerInventory.inv_pastries[itemName];
          } else if (trainerInventory.inv_evolution && itemName in trainerInventory.inv_evolution) {
            quantity = trainerInventory.inv_evolution[itemName];
          } else if (trainerInventory.inv_antiques && itemName in trainerInventory.inv_antiques) {
            quantity = trainerInventory.inv_antiques[itemName];
          } else if (trainerInventory.inv_helditems && itemName in trainerInventory.inv_helditems) {
            quantity = trainerInventory.inv_helditems[itemName];
          }
        }

        // Update quantity display
        const quantityElement = card.querySelector('.item-quantity');
        if (quantityElement) {
          quantityElement.textContent = `Quantity: ${quantity}`;
        }

        // Disable cards for items not in inventory
        if (quantity <= 0) {
          card.classList.add('opacity-50', 'cursor-not-allowed');
          card.title = 'Not in inventory';
        } else {
