</style>

<script>
// Selected items state
let selectedItems = {
  offered: {},
  requested: {}
};

async function loadTrainerInventory(trainerId, containerType) {
  try {
    const response = await fetch(`/api/trainers/${trainerId}/inventory`);
    const data = await response.json();
    
    if (!data.inventory) {
      console.error('No inventory data received');
      return;
    }

    // Store the inventory data
    if (containerType === 'your') {
      window.yourInventory = data.inventory;
      window.yourItemDetails = data.itemDetails;
    } else {
      window.recipientInventory = data.inventory;
      window.recipientItemDetails = data.itemDetails;
    }

    // Load categories
    const categories = Object.keys(data.inventory);
    const categoriesContainer = document.getElementById(`${containerType}-categories`);
    
    let categoriesHtml = '';
    categories.forEach((category, index) => {
      categoriesHtml += `
        <button type="button" 
                class="category-btn px-3 py-1 rounded ${index === 0 ? 'bg-blue-600' : 'bg-gray-700'}"
                onclick="loadItems('${category}', '${containerType}')">
          ${category}
        </button>
      `;
    });
    
    categoriesContainer.innerHTML = categoriesHtml;

    // Load items for the first category
    if (categories.length > 0) {
      loadItems(categories[0], containerType);
    }
  } catch (error) {
    console.error('Error loading inventory:', error);
  }
}

function loadItems(category, containerType) {
  const container = document.getElementById(`${containerType}-items-container`);
  const inventory = containerType === 'your' ? window.yourInventory : window.recipientInventory;
  const itemDetails = containerType === 'your' ? window.yourItemDetails : window.recipientItemDetails;

  if (!inventory || !category || !inventory[category]) {
    container.innerHTML = `
      <div class="empty-state">
        <div class="empty-state-icon">
          <i class="fas fa-box-open"></i>
        </div>
        <div class="empty-state-text">No items in this category</div>
      </div>
    `;
    return;
  }

  let html = "<div class=\"item-grid\">";
  
  Object.entries(inventory[category]).forEach(([itemName, quantity]) => {
    const item = itemDetails[itemName] || { 
      name: itemName, 
      rarity: "common", 
      category: category,
      icon: '/images/items/default.png'
    };

    html += `
      <div class="item-card" data-name="${itemName}" data-category="${category}">
        <div class="item-image">
          <img src="${item.icon}" alt="${itemName}">
        </div>
        <div class="item-details">
          <h3 class="item-name">${itemName}</h3>
          <p class="item-quantity">Quantity: ${quantity}</p>
          <div class="item-controls">
            <button type="button" class="quantity-btn" onclick="decrementQuantity(this)">-</button>
            <input type="number" 
                   class="quantity-input" 
                   min="0" 
                   max="${quantity}" 
                   value="0"
                   onchange="updateSelectedItems('${containerType === 'your' ? 'offered' : 'requested'}', '${itemName}', '${category}', this.value)">
            <button type="button" class="quantity-btn" onclick="incrementQuantity(this, ${quantity})">+</button>
          </div>
        </div>
      </div>
    `;
  });

  html += "</div>";
  container.innerHTML = html;
}

// Event listeners for trainer selection
document.getElementById('yourTrainer').addEventListener('change', function(e) {
  if (e.target.value) {
    loadTrainerInventory(e.target.value, 'your');
  }
});

document.getElementById('tradePartner').addEventListener('change', function(e) {
  if (e.target.value) {
    loadTrainerInventory(e.target.value, 'their');
  }
});

// Search functionality
function setupSearch(containerType) {
  const searchInput = document.getElementById(`${containerType}-items-search`);
  searchInput.addEventListener('input', (e) => {
    const searchTerm = e.target.value.toLowerCase();
    const items = document.querySelectorAll(`#${containerType}-items-container .item-card`);
    
    items.forEach(item => {
      const itemName = item.getAttribute('data-name').toLowerCase();
      item.style.display = itemName.includes(searchTerm) ? 'block' : 'none';
    });
  });
}

setupSearch('your');
setupSearch('their');

// Helper functions for quantity controls
function incrementQuantity(btn, max) {
  const input = btn.parentElement.querySelector('.quantity-input');
  const currentValue = parseInt(input.value) || 0;
  if (currentValue < max) {
    input.value = currentValue + 1;
    input.dispatchEvent(new Event('change'));
  }
}

function decrementQuantity(btn) {
  const input = btn.parentElement.querySelector('.quantity-input');
  const currentValue = parseInt(input.value) || 0;
  if (currentValue > 0) {
    input.value = currentValue - 1;
    input.dispatchEvent(new Event('change'));
  }
}

function updateSelectedItems(type, itemName, category, quantity) {
  quantity = parseInt(quantity) || 0;
  
  if (!selectedItems[type][category]) {
    selectedItems[type][category] = {};
  }

  if (quantity > 0) {
    selectedItems[type][category][itemName] = quantity;
  } else {
    delete selectedItems[type][category][itemName];
    if (Object.keys(selectedItems[type][category]).length === 0) {
      delete selectedItems[type][category];
    }
  }

  updateSelectedItemsList(type);
}

function updateSelectedItemsList(type) {
  const listElement = document.getElementById(`${type}-items-list`);
  listElement.innerHTML = '';

  Object.entries(selectedItems[type]).forEach(([category, items]) => {
    Object.entries(items).forEach(([itemName, quantity]) => {
      const itemElement = document.createElement('div');
      itemElement.className = 'selected-item';
      itemElement.innerHTML = `
        <span>${itemName} x${quantity}</span>
        <button onclick="removeSelectedItem('${type}', '${itemName}', '${category}')" class="remove-btn">
          <i class="fas fa-times"></i>
        </button>
      `;
      listElement.appendChild(itemElement);
    });
  });
}

// Add these styles to your existing style block
</script>

