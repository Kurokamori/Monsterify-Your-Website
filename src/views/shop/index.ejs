<div class="shop-container">
  <h1 class="shop-title"><%= shopId %> Shop</h1>

  <div class="items-grid">
    <% items.forEach(function(item) { %>
      <div class="item-card <%= item.rarity.toLowerCase() %>-rarity">
        <div class="item-header">
          <span class="item-icon"><%= item.icon || 'ðŸ“¦' %></span>
          <h3 class="item-name"><%= item.name %></h3>
        </div>

        <div class="item-details">
          <p class="item-effect"><%= item.effect %></p>
          <div class="item-stats">
            <span class="item-price"><%= item.price %> coins</span>
            <span class="item-availability">
              Available: <%= Number.isInteger(parseInt(item.remaining_quantity)) ? parseInt(item.remaining_quantity) : (Number.isInteger(parseInt(item.remaining)) ? parseInt(item.remaining) : parseInt(item.max_quantity) || 1) %>/<%= parseInt(item.max_quantity) || parseInt(item.purchaseLimit) || 1 %>
            </span>
          </div>
        </div>

        <% if (user) { %>
          <button
            class="purchase-button <%= !item.canPurchase ? 'disabled' : '' %>"
            <%= !item.canPurchase ? 'disabled' : '' %>
            data-item-name="<%= item.name %>"
            data-item-price="<%= item.price %>"
          >
            <%= item.canPurchase ? 'Purchase' : 'Sold Out' %>
          </button>
        <% } else { %>
          <a href="/login" class="login-prompt">Login to Purchase</a>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>

<style>
.shop-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.item-card {
  background: rgba(30, 37, 50, 0.5);
  border-radius: 8px;
  padding: 15px;
  border: 1px solid rgba(214, 163, 57, 0.3);
}

.item-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.item-icon {
  font-size: 24px;
}

.item-name {
  font-size: 18px;
  color: #d6a339;
  margin: 0;
}

.item-effect {
  color: #d7ddf3;
  font-size: 14px;
  margin: 10px 0;
}

.item-stats {
  display: flex;
  justify-content: space-between;
  margin: 10px 0;
  font-size: 14px;
}

.purchase-button {
  width: 100%;
  padding: 8px;
  background: #d6a339;
  color: #1e2532;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: opacity 0.2s;
}

.purchase-button:hover:not(.disabled) {
  opacity: 0.9;
}

.purchase-button.disabled {
  background: #666;
  cursor: not-allowed;
}

.login-prompt {
  display: block;
  text-align: center;
  padding: 8px;
  background: rgba(214, 163, 57, 0.2);
  color: #d6a339;
  text-decoration: none;
  border-radius: 4px;
}

.common-rarity { border-color: #b0b0b0; }
.uncommon-rarity { border-color: #2ecc71; }
.rare-rarity { border-color: #3498db; }
.epic-rarity { border-color: #9b59b6; }
.legendary-rarity { border-color: #f1c40f; }
</style>