<% /* Set the title and other variables for the layout */ %>
<% title = title || 'Content Category' %>

<style>
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .admin-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-back {
        background-color: #7f8c8d;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-back:hover {
        background-color: #95a5a6;
    }

    .btn-add {
        background-color: #2ecc71;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-add:hover {
        background-color: #27ae60;
    }

    .breadcrumbs {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .breadcrumb-item {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .breadcrumb-link {
        color: #3498db;
        text-decoration: none;
    }

    .breadcrumb-link:hover {
        text-decoration: underline;
    }

    .breadcrumb-separator {
        color: #7f8c8d;
    }

    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .content-card {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease;
        position: relative;
    }

    .content-card:hover {
        transform: translateY(-5px);
    }

    .content-header {
        padding: 1.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .content-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin: 0;
        word-break: break-word;
    }

    .content-body {
        padding: 1.5rem;
    }

    .content-type {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .content-type-directory {
        background-color: #3498db;
        color: white;
    }

    .content-type-file {
        background-color: #e74c3c;
        color: white;
    }

    .content-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .btn-edit {
        background-color: #f39c12;
        color: white;
        padding: 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        flex: 1;
        text-align: center;
    }

    .btn-edit:hover {
        background-color: #d35400;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
        padding: 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        flex: 1;
        text-align: center;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }

    .btn-view {
        background-color: #3498db;
        color: white;
        padding: 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        flex: 1;
        text-align: center;
    }

    .btn-view:hover {
        background-color: #2980b9;
    }

    .empty-state {
        background: rgba(0, 0, 0, 0.2);
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        margin-top: 2rem;
    }

    .empty-state-icon {
        font-size: 3rem;
        color: #7f8c8d;
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .empty-state-description {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: #2c3e50;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        padding: 2rem;
        position: relative;
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        font-size: 1.5rem;
        color: #7f8c8d;
        cursor: pointer;
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .modal-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        color: #ffffff;
    }

    .form-control:focus {
        outline: none;
        border-color: #3498db;
    }

    .form-hint {
        font-size: 0.875rem;
        color: #7f8c8d;
        margin-top: 0.25rem;
    }

    .btn-submit {
        background-color: #2ecc71;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        margin-top: 1rem;
    }

    .btn-submit:hover {
        background-color: #27ae60;
    }

    .btn-cancel {
        background-color: #7f8c8d;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        margin-top: 1rem;
    }

    .btn-cancel:hover {
        background-color: #95a5a6;
    }

    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 1.5rem;
    }
</style>

<div class="container">
    <%
    // Define currentPath early
    const currentPath = typeof parentPath !== 'undefined' ? parentPath : '';
    %>
    <div class="admin-header">
        <h1 class="admin-title"><%= categoryData.name %> Content</h1>
        <div class="admin-actions">
            <a href="/admin/content" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Categories
            </a>
            <button class="btn-add" onclick="showAddCategoryModal()">
                <i class="fas fa-folder-plus"></i> Add Subcategory
            </button>
            <a href="/admin/content/<%= category %>/add<%= currentPath ? '?parent=' + currentPath : '' %>" class="btn-add">
                <i class="fas fa-file-plus"></i> Add Content
            </a>
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
    <% } %>

    <%
    // Function to build breadcrumbs
    function buildBreadcrumbs(path) {
        if (!path) return [];

        const parts = path.split('/');
        const breadcrumbs = [];
        let currentPath = '';

        for (let i = 0; i < parts.length; i++) {
            if (parts[i]) {
                currentPath += (currentPath ? '/' : '') + parts[i];
                breadcrumbs.push({
                    name: parts[i],
                    path: currentPath
                });
            }
        }

        return breadcrumbs;
    }

    // Get current directory structure
    function getCurrentStructure(structure, path) {
        if (!path) return structure;

        const parts = path.split('/');
        let current = structure;

        for (const part of parts) {
            if (!part) continue;

            if (current.directories) {
                const dir = current.directories.find(d => d.path === part);
                if (dir && dir.children) {
                    current = dir.children;
                } else {
                    return null;
                }
            } else {
                return null;
            }
        }

        return current;
    }

    const breadcrumbs = buildBreadcrumbs(currentPath);
    const currentStructure = getCurrentStructure(categoryData.structure, currentPath);
    %>

    <div class="breadcrumbs">
        <div class="breadcrumb-item">
            <a href="/admin/content/<%= category %>" class="breadcrumb-link">Root</a>
        </div>

        <% breadcrumbs.forEach((crumb, index) => { %>
            <div class="breadcrumb-separator">/</div>
            <div class="breadcrumb-item">
                <% if (index === breadcrumbs.length - 1) { %>
                    <span><%= crumb.name %></span>
                <% } else { %>
                    <a href="/admin/content/<%= category %>?path=<%= crumb.path %>" class="breadcrumb-link"><%= crumb.name %></a>
                <% } %>
            </div>
        <% }); %>
    </div>

    <% if (currentStructure && (currentStructure.directories?.length > 0 || currentStructure.files?.length > 0)) { %>
        <div class="content-grid">
            <% if (currentStructure.directories) { %>
                <% currentStructure.directories.forEach(dir => { %>
                    <div class="content-card">
                        <div class="content-header">
                            <h2 class="content-title"><%= dir.name %></h2>
                            <i class="fas fa-folder text-yellow-400"></i>
                        </div>
                        <div class="content-body">
                            <span class="content-type content-type-directory">Directory</span>
                            <p>Contains <%= dir.children?.files?.length || 0 %> files and <%= dir.children?.directories?.length || 0 %> subdirectories</p>
                            <div class="content-actions">
                                <a href="/admin/content/<%= category %>?path=<%= (currentPath ? currentPath + '/' : '') + dir.path %>" class="btn-view">
                                    <i class="fas fa-folder-open"></i> Open
                                </a>
                                <button class="btn-delete" onclick="confirmDeleteDirectory('<%= dir.path %>')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>

            <% if (currentStructure.files) { %>
                <% currentStructure.files.forEach(file => { %>
                    <div class="content-card">
                        <div class="content-header">
                            <h2 class="content-title"><%= file.name %></h2>
                            <i class="fas fa-file-alt text-blue-400"></i>
                        </div>
                        <div class="content-body">
                            <span class="content-type content-type-file">File</span>
                            <p>Markdown document</p>
                            <div class="content-actions">
                                <a href="/admin/content/<%= category %>/edit?path=<%= (currentPath ? currentPath + '/' : '') + file.path %>" class="btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="/<%= category %>/<%= (currentPath ? currentPath + '/' : '') + file.path.replace('.md', '') %>" target="_blank" class="btn-view">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <button class="btn-delete" onclick="confirmDeleteFile('<%= file.path %>')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-folder-open"></i>
            </div>
            <h2 class="empty-state-title">No Content Found</h2>
            <p class="empty-state-description">This directory is empty. Add some content to get started.</p>
            <div class="empty-state-actions">
                <button class="btn-add" onclick="showAddCategoryModal()">
                    <i class="fas fa-folder-plus"></i> Add Subcategory
                </button>
                <a href="/admin/content/<%= category %>/add<%= currentPath ? '?parent=' + currentPath : '' %>" class="btn-add ml-4">
                    <i class="fas fa-file-plus"></i> Add Content
                </a>
            </div>
        </div>
    <% } %>
</div>

<!-- Add Category Modal -->
<div id="addCategoryModal" class="modal">
    <div class="modal-content">
        <span class="modal-close" onclick="hideAddCategoryModal()">&times;</span>
        <h2 class="modal-title">Add New Subcategory</h2>
        <form action="/admin/content/<%= category %>/add-category" method="POST" class="modal-form">
            <input type="hidden" name="parentPath" value="<%= currentPath %>">

            <div class="form-group">
                <label for="categoryName" class="form-label">Category Name</label>
                <input type="text" id="categoryName" name="categoryName" class="form-control" required>
                <div class="form-hint">This will be used as the directory name</div>
            </div>

            <div class="form-group">
                <label for="categoryTitle" class="form-label">Display Title</label>
                <input type="text" id="categoryTitle" name="categoryTitle" class="form-control" required>
                <div class="form-hint">This will be shown in the navigation</div>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="hideAddCategoryModal()">Cancel</button>
                <button type="submit" class="btn-submit">Create Subcategory</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete File Confirmation Modal -->
<div id="deleteFileModal" class="modal">
    <div class="modal-content">
        <span class="modal-close" onclick="hideDeleteFileModal()">&times;</span>
        <h2 class="modal-title">Delete File</h2>
        <p>Are you sure you want to delete this file? This action cannot be undone.</p>

        <form action="/admin/content/<%= category %>/delete-file" method="POST" class="modal-form">
            <input type="hidden" name="parentPath" value="<%= currentPath %>">
            <input type="hidden" id="deleteFilePath" name="filePath" value="">

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="hideDeleteFileModal()">Cancel</button>
                <button type="submit" class="btn-submit">Delete File</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Directory Confirmation Modal -->
<div id="deleteDirectoryModal" class="modal">
    <div class="modal-content">
        <span class="modal-close" onclick="hideDeleteDirectoryModal()">&times;</span>
        <h2 class="modal-title">Delete Directory</h2>
        <p>Are you sure you want to delete this directory and all its contents? This action cannot be undone.</p>

        <form action="/admin/content/<%= category %>/delete-directory" method="POST" class="modal-form">
            <input type="hidden" name="parentPath" value="<%= currentPath %>">
            <input type="hidden" id="deleteDirectoryPath" name="directoryPath" value="">

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="hideDeleteDirectoryModal()">Cancel</button>
                <button type="submit" class="btn-submit">Delete Directory</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Modal functions
    function showAddCategoryModal() {
        document.getElementById('addCategoryModal').style.display = 'flex';
    }

    function hideAddCategoryModal() {
        document.getElementById('addCategoryModal').style.display = 'none';
    }

    function confirmDeleteFile(filePath) {
        document.getElementById('deleteFilePath').value = filePath;
        document.getElementById('deleteFileModal').style.display = 'flex';
    }

    function hideDeleteFileModal() {
        document.getElementById('deleteFileModal').style.display = 'none';
    }

    function confirmDeleteDirectory(directoryPath) {
        document.getElementById('deleteDirectoryPath').value = directoryPath;
        document.getElementById('deleteDirectoryModal').style.display = 'flex';
    }

    function hideDeleteDirectoryModal() {
        document.getElementById('deleteDirectoryModal').style.display = 'none';
    }
</script>