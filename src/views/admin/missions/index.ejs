<% /* Set the title and other variables for the layout */ %>
<% title = 'Mission Management' %>

<style>
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .admin-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-add {
        background-color: #2ecc71;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-add:hover {
        background-color: #27ae60;
    }

    .alert {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
    }

    .alert-success {
        background-color: rgba(52, 211, 153, 0.2);
        border: 1px solid rgba(52, 211, 153, 0.5);
        color: #10b981;
    }

    .alert-error {
        background-color: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.5);
        color: #ef4444;
    }

    .missions-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background-color: var(--card-background);
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .missions-table th,
    .missions-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid var(--divider-color);
    }

    .missions-table th {
        background-color: rgba(0, 0, 0, 0.2);
        font-weight: bold;
    }

    .missions-table tr:last-child td {
        border-bottom: none;
    }

    .mission-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-view,
    .btn-edit,
    .btn-delete,
    .btn-toggle {
        padding: 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        font-size: 0.875rem;
    }

    .btn-view {
        background-color: #3498db;
        color: white;
    }

    .btn-view:hover {
        background-color: #2980b9;
    }

    .btn-edit {
        background-color: #f39c12;
        color: white;
    }

    .btn-edit:hover {
        background-color: #d35400;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }

    .btn-toggle {
        background-color: #9b59b6;
        color: white;
    }

    .btn-toggle:hover {
        background-color: #8e44ad;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: bold;
    }

    .status-active {
        background-color: rgba(52, 211, 153, 0.2);
        color: #10b981;
    }

    .status-inactive {
        background-color: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    .mission-description {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background-color: var(--card-background);
        border-radius: 0.5rem;
        margin-top: 2rem;
    }

    .empty-state-icon {
        font-size: 3rem;
        color: var(--divider-color);
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .empty-state-description {
        color: var(--text-color);
        opacity: 0.7;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container">
    <div class="admin-header">
        <h1 class="admin-title">Mission Management</h1>
        <div class="admin-actions">
            <a href="/admin/missions/add" class="btn-add">
                <i class="fas fa-plus"></i> Add New Mission
            </a>
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
    <% } %>

    <% if (missions && missions.length > 0) { %>
    <table class="missions-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Level Req.</th>
                <th>Rewards</th>
                <th>Progress</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% missions.forEach(function(mission) { %>
            <tr>
                <td><%= mission.id %></td>
                <td><%= mission.name %></td>
                <td class="mission-description" title="<%= mission.description %>"><%= mission.description %></td>
                <td><%= mission.level_requirement || 'None' %></td>
                <td>
                    <div>Levels: <%= mission.level_rewards %></div>
                    <div>Coins: <%= mission.coin_rewards %></div>
                    <% if (mission.item_rewards && mission.item_rewards.length > 0) { %>
                    <div>Items: <%= mission.item_rewards.length %></div>
                    <% } %>
                </td>
                <td>
                    <div>Min: <%= mission.min_progress_needed %></div>
                    <% if (mission.max_progress_needed) { %>
                    <div>Max: <%= mission.max_progress_needed %></div>
                    <% } else { %>
                    <div>Fixed</div>
                    <% } %>
                </td>
                <td>
                    <% if (mission.is_active) { %>
                    <span class="status-badge status-active">Active</span>
                    <% } else { %>
                    <span class="status-badge status-inactive">Inactive</span>
                    <% } %>
                </td>
                <td class="mission-actions">
                    <a href="/admin/missions/edit/<%= mission.id %>" class="btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="/admin/missions/delete/<%= mission.id %>" class="btn-delete">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <form action="/admin/missions/toggle/<%= mission.id %>" method="POST" style="display: inline;">
                        <input type="hidden" name="is_active" value="<%= !mission.is_active %>">
                        <button type="submit" class="btn-toggle">
                            <% if (mission.is_active) { %>
                            <i class="fas fa-toggle-off"></i> Deactivate
                            <% } else { %>
                            <i class="fas fa-toggle-on"></i> Activate
                            <% } %>
                        </button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-scroll"></i>
        </div>
        <h2 class="empty-state-title">No Missions Found</h2>
        <p class="empty-state-description">Create your first mission to get started.</p>
        <a href="/admin/missions/add" class="btn-add">
            <i class="fas fa-plus"></i> Add New Mission
        </a>
    </div>
    <% } %>
</div>
