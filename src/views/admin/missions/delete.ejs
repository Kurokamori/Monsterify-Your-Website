<% /* Set the title and other variables for the layout */ %>
<% title = 'Delete Mission' %>

<style>
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .admin-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-back {
        background-color: #7f8c8d;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-back:hover {
        background-color: #95a5a6;
    }

    .delete-container {
        background-color: var(--card-background);
        border-radius: 0.5rem;
        padding: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .delete-icon {
        font-size: 4rem;
        color: #e74c3c;
        margin-bottom: 1.5rem;
    }

    .delete-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .delete-message {
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .mission-details {
        background-color: rgba(0, 0, 0, 0.2);
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        text-align: left;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .mission-detail {
        margin-bottom: 0.75rem;
    }

    .mission-detail-label {
        font-weight: bold;
        margin-right: 0.5rem;
    }

    .delete-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-cancel {
        background-color: #7f8c8d;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-cancel:hover {
        background-color: #95a5a6;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }
</style>

<div class="container">
    <div class="admin-header">
        <h1 class="admin-title">Delete Mission</h1>
        <div class="admin-actions">
            <a href="/admin/missions" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Missions
            </a>
        </div>
    </div>

    <div class="delete-container">
        <div class="delete-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>

        <h2 class="delete-title">Are you sure you want to delete this mission?</h2>

        <p class="delete-message">
            This action cannot be undone. Deleting this mission will remove it from the system permanently.
            Any active missions of this type will be lost.
        </p>

        <div class="mission-details">
            <div class="mission-detail">
                <span class="mission-detail-label">ID:</span>
                <span><%= mission.id %></span>
            </div>

            <div class="mission-detail">
                <span class="mission-detail-label">Name:</span>
                <span><%= mission.name %></span>
            </div>

            <div class="mission-detail">
                <span class="mission-detail-label">Description:</span>
                <span><%= mission.description %></span>
            </div>

            <div class="mission-detail">
                <span class="mission-detail-label">Status:</span>
                <span><%= mission.is_active ? 'Active' : 'Inactive' %></span>
            </div>

            <div class="mission-detail">
                <span class="mission-detail-label">Created:</span>
                <span><%= new Date(mission.created_at).toLocaleString() %></span>
            </div>
        </div>

        <div class="delete-actions">
            <a href="/admin/missions" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>

            <form action="/admin/missions/delete/<%= mission.id %>" method="POST">
                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash"></i> Delete Mission
                </button>
            </form>
        </div>
    </div>
</div>
