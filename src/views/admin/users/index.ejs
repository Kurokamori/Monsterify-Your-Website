<% /* Set the title and other variables for the layout */ %>
<% title = title || 'User Management' %>

<style>
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .admin-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-add {
        background-color: #2ecc71;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-add:hover {
        background-color: #27ae60;
    }

    .btn-back {
        background-color: #7f8c8d;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-back:hover {
        background-color: #95a5a6;
    }

    .alert {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
    }

    .alert-success {
        background-color: rgba(52, 211, 153, 0.2);
        border: 1px solid rgba(52, 211, 153, 0.5);
        color: #10b981;
    }

    .alert-error {
        background-color: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.5);
        color: #ef4444;
    }

    .users-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

    .users-table th,
    .users-table td {
        padding: 0.75rem 1rem;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .users-table th {
        background-color: rgba(0, 0, 0, 0.2);
        font-weight: bold;
    }

    .users-table tr:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .user-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-edit {
        background-color: #3498db;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.875rem;
    }

    .btn-edit:hover {
        background-color: #2980b9;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.875rem;
        cursor: pointer;
        border: none;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }

    .badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: bold;
    }

    .badge-admin {
        background-color: #e74c3c;
        color: white;
    }

    .badge-user {
        background-color: #3498db;
        color: white;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #1e2532;
        padding: 2rem;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #ffffff;
    }

    .modal-body {
        margin-bottom: 1.5rem;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn-cancel {
        background-color: #7f8c8d;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-cancel:hover {
        background-color: #95a5a6;
    }

    .btn-confirm {
        background-color: #e74c3c;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-confirm:hover {
        background-color: #c0392b;
    }
</style>

<div class="container">
    <div class="admin-header">
        <h1 class="admin-title">User Management</h1>
        <div class="admin-actions">
            <a href="/admin/dashboard" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
            <a href="/admin/users/add" class="btn-add">
                <i class="fas fa-plus"></i> Add New User
            </a>
        </div>
    </div>

    <% if (message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
    <% } %>

    <table class="users-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Display Name</th>
                <th>Discord ID</th>
                <th>Role</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.display_name %></td>
                <td><%= user.discord_id || 'None' %></td>
                <td>
                    <% if (user.is_admin) { %>
                    <span class="badge badge-admin">Admin</span>
                    <% } else { %>
                    <span class="badge badge-user">User</span>
                    <% } %>
                </td>
                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                <td class="user-actions">
                    <a href="/admin/users/edit/<%= user.id %>" class="btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <% if (user.id !== user_session.id) { %>
                    <button class="btn-delete" onclick="confirmDelete('<%= user.id %>', '<%= user.username %>')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <% } %>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Confirm Delete</h2>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete user <strong id="deleteUserName"></strong>?</p>
                <p>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button class="btn-cancel" onclick="closeModal()">Cancel</button>
                <form id="deleteForm" method="POST" action="">
                    <button type="submit" class="btn-confirm">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(id, username) {
        document.getElementById('deleteUserName').textContent = username;
        document.getElementById('deleteForm').action = `/admin/users/delete/${id}`;
        document.getElementById('deleteModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('deleteModal').style.display = 'none';
    }

    // Close modal when clicking outside of it
    window.onclick = function(event) {
        const modal = document.getElementById('deleteModal');
        if (event.target === modal) {
            closeModal();
        }
    }
</script>