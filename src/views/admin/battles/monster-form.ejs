<%- include('./battle-styles') %>

<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-8">
    <a href="/admin/battles/opponents/<%= opponent.opponent_id %>" class="text-blue-400 hover:text-blue-300 mr-4">
      <i class="fas fa-arrow-left"></i> Back to Opponent
    </a>
    <h1 class="text-3xl font-bold text-yellow-400">Add Monster to <%= opponent.name %></h1>
  </div>

  <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
    <form action="/admin/battles/opponents/<%= opponent.opponent_id %>/add-monster" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="name" class="block text-gray-300 mb-2">Name *</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= monster.name || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
            required
          >
        </div>

        <div>
          <label for="level" class="block text-gray-300 mb-2">Level *</label>
          <input
            type="number"
            id="level"
            name="level"
            value="<%= monster.level || opponent.level || 10 %>"
            min="1"
            max="100"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
            required
          >
        </div>

        <div>
          <label for="species1" class="block text-gray-300 mb-2">Species 1 *</label>
          <input
            type="text"
            id="species1"
            name="species1"
            value="<%= monster.species1 || 'Pokemon' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
            required
          >
        </div>

        <div>
          <label for="species2" class="block text-gray-300 mb-2">Species 2</label>
          <input
            type="text"
            id="species2"
            name="species2"
            value="<%= monster.species2 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="species3" class="block text-gray-300 mb-2">Species 3</label>
          <input
            type="text"
            id="species3"
            name="species3"
            value="<%= monster.species3 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="type1" class="block text-gray-300 mb-2">Type 1 *</label>
          <input
            type="text"
            id="type1"
            name="type1"
            value="<%= monster.type1 || 'Normal' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
            required
          >
        </div>

        <div>
          <label for="type2" class="block text-gray-300 mb-2">Type 2</label>
          <input
            type="text"
            id="type2"
            name="type2"
            value="<%= monster.type2 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="type3" class="block text-gray-300 mb-2">Type 3</label>
          <input
            type="text"
            id="type3"
            name="type3"
            value="<%= monster.type3 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="type4" class="block text-gray-300 mb-2">Type 4</label>
          <input
            type="text"
            id="type4"
            name="type4"
            value="<%= monster.type4 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="type5" class="block text-gray-300 mb-2">Type 5</label>
          <input
            type="text"
            id="type5"
            name="type5"
            value="<%= monster.type5 || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
        </div>

        <div>
          <label for="attribute" class="block text-gray-300 mb-2">Attribute</label>
          <select
            id="attribute"
            name="attribute"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
          >
            <option value="" <%= !monster.attribute ? 'selected' : '' %>>None</option>
            <option value="Data" <%= monster.attribute === 'Data' ? 'selected' : '' %>>Data</option>
            <option value="Vaccine" <%= monster.attribute === 'Vaccine' ? 'selected' : '' %>>Vaccine</option>
            <option value="Virus" <%= monster.attribute === 'Virus' ? 'selected' : '' %>>Virus</option>
            <option value="Free" <%= monster.attribute === 'Free' ? 'selected' : '' %>>Free</option>
            <option value="Variable" <%= monster.attribute === 'Variable' ? 'selected' : '' %>>Variable</option>
          </select>
        </div>

        <div>
          <label for="image_url" class="block text-gray-300 mb-2">Image URL</label>
          <input
            type="text"
            id="image_url"
            name="image_url"
            value="<%= monster.image_url || '' %>"
            class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:outline-none focus:border-yellow-500"
            placeholder="https://example.com/image.png"
          >
        </div>
      </div>

      <div class="flex justify-between">
        <a href="/admin/battles/opponents/<%= opponent.opponent_id %>" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
          Cancel
        </a>
        <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded">
          Add Monster
        </button>
      </div>
    </form>
  </div>
</div>
