<%- include('../../partials/admin-header') %>

<div class="container mx-auto px-4 py-8" style="max-width: 800px;">
  <div class="flex items-center mb-6">
    <a href="/admin/locations" class="text-accent hover:text-accent-hover mr-4">
      <i class="fas fa-arrow-left mr-1"></i> Back to Regions
    </a>
    <h1 class="text-3xl font-bold"><%= title %></h1>
  </div>

  <div class="bg-card-background rounded-lg p-6">
    <form action="<%= region ? `/admin/locations/region/${region.slug}/edit` : '/admin/locations/region/new' %>" method="POST" enctype="multipart/form-data">
      <div class="form-group mb-4">
        <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Region Name</label>
        <input type="text" id="name" name="name" class="form-input w-full" value="<%= region ? region.name : '' %>" required>
        <p class="text-xs text-gray-400 mt-1">The display name for this region.</p>
      </div>
      
      <div class="form-group mb-4">
        <label for="slug" class="block text-sm font-medium text-gray-300 mb-1">Slug</label>
        <input type="text" id="slug" name="slug" class="form-input w-full" value="<%= region ? region.slug : '' %>" required>
        <p class="text-xs text-gray-400 mt-1">URL-friendly identifier (e.g., "central-continent"). Use only lowercase letters, numbers, and hyphens.</p>
      </div>
      
      <div class="form-group mb-4">
        <label for="description" class="block text-sm font-medium text-gray-300 mb-1">Description</label>
        <textarea id="description" name="description" class="form-textarea w-full" rows="3" required><%= region ? region.description : '' %></textarea>
        <p class="text-xs text-gray-400 mt-1">A brief description of this region.</p>
      </div>
      
      <div class="form-group mb-6">
        <label for="image" class="block text-sm font-medium text-gray-300 mb-1">Region Image</label>
        <div class="flex items-start">
          <div class="flex-grow">
            <input type="file" id="image" name="image" class="form-input w-full" accept="image/*">
            <p class="text-xs text-gray-400 mt-1">Recommended size: 1280x720px (16:9 ratio). Max 5MB.</p>
          </div>
          <% if (region && region.image) { %>
            <div class="ml-4 flex-shrink-0">
              <img src="<%= region.image %>" alt="Current image" class="h-20 w-auto rounded">
              <p class="text-xs text-gray-400 mt-1 text-center">Current</p>
            </div>
          <% } %>
        </div>
      </div>
      
      <div class="form-group mt-8 flex justify-between">
        <a href="/admin/locations" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">
          <%= region ? 'Update Region' : 'Create Region' %>
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .form-input, .form-textarea, .form-select {
    background-color: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    width: 100%;
  }
  
  .form-input:focus, .form-textarea:focus, .form-select:focus {
    border-color: var(--accent-color, #ffc107);
    outline: none;
    box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
  }
  
  .form-textarea {
    min-height: 100px;
    resize: vertical;
  }
</style>

<script>
  // Auto-generate slug from name
  const nameInput = document.getElementById('name');
  const slugInput = document.getElementById('slug');
  
  // Only auto-generate if slug is empty
  nameInput.addEventListener('input', function() {
    if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
      const slug = this.value
        .toLowerCase()
        .replace(/[^\w\s-]/g, '') // Remove special chars
        .replace(/\s+/g, '-')     // Replace spaces with hyphens
        .replace(/-+/g, '-');     // Replace multiple hyphens with single hyphen
      
      slugInput.value = slug;
      slugInput.dataset.autoGenerated = 'true';
    }
  });
  
  // Once user manually edits slug, stop auto-generating
  slugInput.addEventListener('input', function() {
    this.dataset.autoGenerated = 'false';
  });
</script>

<%- include('../../partials/admin-footer') %>
