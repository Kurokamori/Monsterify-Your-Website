<% /* Set the title and other variables for the layout */ %>
<% title = 'Admin Dashboard' %>

<style>
.alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.alert-success {
    background-color: rgba(52, 211, 153, 0.2);
    border: 1px solid rgba(52, 211, 153, 0.5);
    color: #10b981;
}
</style>

<div class="mt-20 mb-8">
    <h1 class="text-4xl font-display font-bold text-center mb-8">Admin Dashboard</h1>
    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success text-center mb-8">
        <%= message %>
    </div>
    <% } %>
</div>

<main class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="text-xl font-bold">Dashboard Controls</h2>
        </div>
        <div class="card-body">
            <p class="mb-4">Welcome to the admin dashboard, <%= user.display_name %>!</p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">User Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage users and permissions</p>
                        <a href="/admin/users" class="btn-primary mt-4 block text-center">Manage Users</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Content Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage guides, lore, and other content</p>
                        <a href="/admin/content" class="btn-primary mt-4 block text-center">Manage Content</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Fakemon Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage Fakemon entries</p>
                        <a href="/admin/fakemon" class="btn-primary mt-4 block text-center">Manage Fakemon</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Trainer Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage trainers and monsters</p>
                        <a href="/trainers" class="btn-primary mt-4 block text-center">View Trainers</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Database Tools</h2>
                    </div>
                    <div class="card-body">
                        <p>Database maintenance tools</p>
                        <a href="/admin/seed" class="btn-primary mt-4 block text-center">Seed Sample Data</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Monster Roller</h2>
                    </div>
                    <div class="card-body">
                        <p>Generate random monsters for trainers</p>
                        <a href="/admin/monster-roller" class="btn-primary mt-4 block text-center">Roll Monsters</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Add Monster</h2>
                    </div>
                    <div class="card-body">
                        <p>Create a custom monster for any trainer</p>
                        <a href="/admin/add-monster" class="btn-primary mt-4 block text-center">Add Monster</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Monster Counts</h2>
                    </div>
                    <div class="card-body">
                        <p>Recalculate monster counts for all trainers</p>
                        <a href="/admin/recalculate-monster-counts" class="btn-primary mt-4 block text-center">Recalculate Counts</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Inventory Manager</h2>
                    </div>
                    <div class="card-body">
                        <p>Add or remove items from trainer inventories</p>
                        <a href="/admin/inventory-manager" class="btn-primary mt-4 block text-center">Manage Inventories</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Level Manager</h2>
                    </div>
                    <div class="card-body">
                        <p>Add levels to trainers and monsters</p>
                        <a href="/admin/level-manager" class="btn-primary mt-4 block text-center">Manage Levels</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Mission Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage missions for players</p>
                        <a href="/admin/missions" class="btn-primary mt-4 block text-center">Manage Missions</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Test Rewards</h2>
                    </div>
                    <div class="card-body">
                        <p>Test different reward scenarios for the game</p>
                        <a href="/admin/test-rewards" class="btn-primary mt-4 block text-center">Test Rewards</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Shop Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage shop configurations and inventories</p>
                        <a href="/admin/shops" class="btn-primary mt-4 block text-center">Manage Shops</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Shop Configurations</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage shop settings, categories, and pricing</p>
                        <a href="/admin/shops/config" class="btn-primary mt-4 block text-center">Shop Configs</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Shop Inventories</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage daily shop items and restock shops</p>
                        <a href="/admin/shops/inventory" class="btn-primary mt-4 block text-center">Shop Inventories</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Boss Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage monthly boss battles</p>
                        <a href="/admin/bosses" class="btn-primary mt-4 block text-center">Manage Bosses</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Battle System</h2>
                    </div>
                    <div class="card-body">
                        <p>Manage battle opponents and test the battle system</p>
                        <a href="/admin/battles" class="btn-primary mt-4 block text-center">Battle Management</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Region Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage adventure regions</p>
                        <a href="/admin/regions" class="btn-primary mt-4 block text-center">Manage Regions</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Area Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage adventure areas</p>
                        <a href="/admin/areas" class="btn-primary mt-4 block text-center">Manage Areas</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Prompt Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage artwork prompts for trainers</p>
                        <a href="/admin/prompts" class="btn-primary mt-4 block text-center">Manage Prompts</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Achievement Management</h2>
                    </div>
                    <div class="card-body">
                        <p>Create and manage trainer achievements</p>
                        <a href="/admin/achievements" class="btn-primary mt-4 block text-center">Manage Achievements</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold">Battle Testing</h2>
                    </div>
                    <div class="card-body">
                        <p>Test the battle system with any trainer and opponent</p>
                        <a href="/admin/battles/test" class="btn-primary mt-4 block text-center">Test Battle System</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
