<script>
  document.addEventListener('DOMContentLoaded', function() {
    const customForm = document.getElementById('custom-game-corner-form');

    customForm.addEventListener('submit', function(e) {
      e.preventDefault();

      const sessions = document.getElementById('sessions').value;
      const minutes = document.getElementById('minutes').value;
      const productivity = document.getElementById('productivity').value;

      // Redirect to rewards page with custom parameters
      window.location.href = `/town/rewards?sessions=${sessions}&minutes=${minutes}&productivity=${productivity}&source=game_corner&pageTitle=Pomodoro+Session+Complete!&returnUrl=/admin/test-rewards&returnButtonText=Back+to+Test+Rewards&allowTrainerSelection=false&showClaimAllButton=false`;
    });
  });
</script>