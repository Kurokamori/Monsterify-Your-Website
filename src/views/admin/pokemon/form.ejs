<% /* Set the title and other variables for the layout */ %>
<% title = isNew ? 'Add New Pokémon' : `Edit Pokémon: ${pokemon.SpeciesName}` %>

<style>
  .form-container {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  @media (min-width: 640px) {
    .form-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 768px) {
    .form-row.three-cols {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .form-group {
    margin-bottom: 1rem;
  }
  
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }
  
  .form-control {
    width: 100%;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(0, 0, 0, 0.2);
    color: white;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #3498db;
  }
  
  .form-hint {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 0.25rem;
  }
  
  .form-check {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .form-check-input {
    margin-right: 0.5rem;
  }
  
  .form-check-label {
    font-size: 0.875rem;
  }
  
  .form-section {
    margin-bottom: 1.5rem;
  }
  
  .form-section-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .btn-submit {
    background-color: #f1c40f;
    color: black;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    border: none;
    font-weight: bold;
    cursor: pointer;
    font-size: 1rem;
  }
  
  .btn-submit:hover {
    background-color: #f39c12;
  }
  
  .btn-back {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-back:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .admin-title {
    font-size: 1.75rem;
    font-weight: bold;
  }
  
  .admin-actions {
    display: flex;
    gap: 0.5rem;
  }
</style>

<div class="mt-20 mb-8">
  <div class="admin-header">
    <h1 class="admin-title"><%= isNew ? 'Add New Pokémon' : `Edit Pokémon: ${pokemon.SpeciesName}` %></h1>
    <div class="admin-actions">
      <a href="/admin/pokemon" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to List
      </a>
    </div>
  </div>
  
  <div class="form-container">
    <form action="/admin/pokemon/save" method="POST">
      <input type="hidden" name="isNew" value="<%= isNew %>">
      
      <div class="form-section">
        <h2 class="form-section-title">Basic Information</h2>
        
        <div class="form-row">
          <div class="form-group">
            <label for="SpeciesName" class="form-label">Species Name</label>
            <input type="text" id="SpeciesName" name="SpeciesName" class="form-control" value="<%= pokemon.SpeciesName %>" <%= !isNew ? 'readonly' : '' %> required>
          </div>
          
          <div class="form-group">
            <label for="pokedexnumber" class="form-label">Pokédex Number</label>
            <input type="number" id="pokedexnumber" name="pokedexnumber" class="form-control" value="<%= pokemon.pokedexnumber || '' %>">
          </div>
        </div>
        
        <div class="form-row three-cols">
          <div class="form-group">
            <label for="Type1" class="form-label">Primary Type</label>
            <select id="Type1" name="Type1" class="form-control" required>
              <option value="" disabled <%= !pokemon.Type1 ? 'selected' : '' %>>Select Type</option>
              <% ['Normal', 'Fire', 'Water', 'Grass', 'Electric', 'Ice', 'Fighting', 'Poison', 'Ground', 'Flying', 'Psychic', 'Bug', 'Rock', 'Ghost', 'Dragon', 'Dark', 'Steel', 'Fairy'].forEach(function(type) { %>
              <option value="<%= type %>" <%= pokemon.Type1 === type ? 'selected' : '' %>><%= type %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="Type2" class="form-label">Secondary Type</label>
            <select id="Type2" name="Type2" class="form-control">
              <option value="" <%= !pokemon.Type2 ? 'selected' : '' %>>None</option>
              <% ['Normal', 'Fire', 'Water', 'Grass', 'Electric', 'Ice', 'Fighting', 'Poison', 'Ground', 'Flying', 'Psychic', 'Bug', 'Rock', 'Ghost', 'Dragon', 'Dark', 'Steel', 'Fairy'].forEach(function(type) { %>
              <option value="<%= type %>" <%= pokemon.Type2 === type ? 'selected' : '' %>><%= type %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="region" class="form-label">Region</label>
            <select id="region" name="region" class="form-control" required>
              <option value="" disabled <%= !pokemon.region ? 'selected' : '' %>>Select Region</option>
              <% ['Kanto', 'Johto', 'Hoenn', 'Sinnoh', 'Unova', 'Kalos', 'Alola', 'Galar', 'Paldea', 'Conocoo', 'Other'].forEach(function(region) { %>
              <option value="<%= region %>" <%= pokemon.region === region ? 'selected' : '' %>><%= region %></option>
              <% }); %>
            </select>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="Stage" class="form-label">Evolution Stage</label>
            <select id="Stage" name="Stage" class="form-control" required>
              <option value="" disabled <%= !pokemon.Stage ? 'selected' : '' %>>Select Stage</option>
              <% ['Base Stage', 'Middle Stage', 'Final Stage', "Doesn't Evolve"].forEach(function(stage) { %>
              <option value="<%= stage %>" <%= pokemon.Stage === stage ? 'selected' : '' %>><%= stage %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="Rarity" class="form-label">Rarity</label>
            <select id="Rarity" name="Rarity" class="form-control" required>
              <option value="" disabled <%= !pokemon.Rarity ? 'selected' : '' %>>Select Rarity</option>
              <% ['Common', 'Uncommon', 'Rare', 'Very Rare', 'Legendary', 'Mythical'].forEach(function(rarity) { %>
              <option value="<%= rarity %>" <%= pokemon.Rarity === rarity ? 'selected' : '' %>><%= rarity %></option>
              <% }); %>
            </select>
          </div>
        </div>
      </div>
      
      <div class="form-section">
        <h2 class="form-section-title">Evolution Chain</h2>
        
        <div class="form-row">
          <div class="form-group">
            <label for="EvolvesFrom" class="form-label">Evolves From</label>
            <input type="text" id="EvolvesFrom" name="EvolvesFrom" class="form-control" value="<%= pokemon.EvolvesFrom || '' %>">
            <div class="form-hint">Name of the Pokémon this evolves from (if any)</div>
          </div>
          
          <div class="form-group">
            <label for="EvolvesInto" class="form-label">Evolves Into</label>
            <input type="text" id="EvolvesInto" name="EvolvesInto" class="form-control" value="<%= pokemon.EvolvesInto || '' %>">
            <div class="form-hint">Name of the Pokémon this evolves into (if any)</div>
          </div>
        </div>
        
        <div class="form-group">
          <label for="BreedingResultsIn" class="form-label">Breeding Results In</label>
          <input type="text" id="BreedingResultsIn" name="BreedingResultsIn" class="form-control" value="<%= pokemon.BreedingResultsIn || '' %>">
          <div class="form-hint">Name of the baby Pokémon that results from breeding (if any)</div>
        </div>
      </div>
      
      <div class="form-section">
        <h2 class="form-section-title">Special Flags</h2>
        
        <div class="form-row three-cols">
          <div class="form-check">
            <input type="checkbox" id="is_starter" name="is_starter" class="form-check-input" <%= pokemon.is_starter ? 'checked' : '' %>>
            <label for="is_starter" class="form-check-label">Starter Pokémon</label>
          </div>
          
          <div class="form-check">
            <input type="checkbox" id="is_fossil" name="is_fossil" class="form-check-input" <%= pokemon.is_fossil ? 'checked' : '' %>>
            <label for="is_fossil" class="form-check-label">Fossil Pokémon</label>
          </div>
          
          <div class="form-check">
            <input type="checkbox" id="is_baby" name="is_baby" class="form-check-input" <%= pokemon.is_baby ? 'checked' : '' %>>
            <label for="is_baby" class="form-check-label">Baby Pokémon</label>
          </div>
          
          <div class="form-check">
            <input type="checkbox" id="is_psuedolegendary" name="is_psuedolegendary" class="form-check-input" <%= pokemon.is_psuedolegendary ? 'checked' : '' %>>
            <label for="is_psuedolegendary" class="form-check-label">Pseudo-Legendary</label>
          </div>
          
          <div class="form-check">
            <input type="checkbox" id="is_sublegendary" name="is_sublegendary" class="form-check-input" <%= pokemon.is_sublegendary ? 'checked' : '' %>>
            <label for="is_sublegendary" class="form-check-label">Sub-Legendary</label>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-6">
        <button type="submit" class="btn-submit">
          <i class="fas fa-save"></i> <%= isNew ? 'Create Pokémon' : 'Update Pokémon' %>
        </button>
      </div>
    </form>
  </div>
</div>
