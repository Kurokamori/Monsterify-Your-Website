<% /* Set the title and other variables for the layout */ %>
<% title = isNew ? 'Add New Yokai' : `Edit Yokai: ${yokai.Name}` %>

<style>
  .form-container {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  @media (min-width: 640px) {
    .form-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 768px) {
    .form-row.three-cols {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .form-group {
    margin-bottom: 1rem;
  }
  
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }
  
  .form-control {
    width: 100%;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(0, 0, 0, 0.2);
    color: white;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #3498db;
  }
  
  .form-hint {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 0.25rem;
  }
  
  .form-section {
    margin-bottom: 1.5rem;
  }
  
  .form-section-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .btn-submit {
    background-color: #f1c40f;
    color: black;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    border: none;
    font-weight: bold;
    cursor: pointer;
    font-size: 1rem;
  }
  
  .btn-submit:hover {
    background-color: #f39c12;
  }
  
  .btn-back {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-back:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .admin-title {
    font-size: 1.75rem;
    font-weight: bold;
  }
  
  .admin-actions {
    display: flex;
    gap: 0.5rem;
  }
</style>

<div class="mt-20 mb-8">
  <div class="admin-header">
    <h1 class="admin-title"><%= isNew ? 'Add New Yokai' : `Edit Yokai: ${yokai.Name}` %></h1>
    <div class="admin-actions">
      <a href="/admin/yokai" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to List
      </a>
    </div>
  </div>
  
  <div class="form-container">
    <form action="/admin/yokai/save" method="POST">
      <input type="hidden" name="isNew" value="<%= isNew %>">
      
      <div class="form-section">
        <h2 class="form-section-title">Basic Information</h2>
        
        <div class="form-row">
          <div class="form-group">
            <label for="id" class="form-label">ID</label>
            <input type="text" id="id" name="id" class="form-control" value="<%= yokai.id || '' %>">
            <div class="form-hint">Unique identifier (optional)</div>
          </div>
          
          <div class="form-group">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="<%= yokai.Name %>" <%= !isNew ? 'readonly' : '' %> required>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="Rank" class="form-label">Rank</label>
            <select id="Rank" name="Rank" class="form-control" required>
              <option value="" disabled <%= !yokai.Rank ? 'selected' : '' %>>Select Rank</option>
              <% ['E', 'D', 'C', 'B', 'A', 'S', 'SS', 'SSS'].forEach(function(rank) { %>
              <option value="<%= rank %>" <%= yokai.Rank === rank ? 'selected' : '' %>><%= rank %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="Tribe" class="form-label">Tribe</label>
            <select id="Tribe" name="Tribe" class="form-control" required>
              <option value="" disabled <%= !yokai.Tribe ? 'selected' : '' %>>Select Tribe</option>
              <% ['Charming', 'Heartful', 'Mysterious', 'Tough', 'Shady', 'Eerie', 'Slippery', 'Brave', 'Other'].forEach(function(tribe) { %>
              <option value="<%= tribe %>" <%= yokai.Tribe === tribe ? 'selected' : '' %>><%= tribe %></option>
              <% }); %>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label for="Attribute" class="form-label">Attribute</label>
          <input type="text" id="Attribute" name="Attribute" class="form-control" value="<%= yokai.Attribute || '' %>">
          <div class="form-hint">Element or special attribute (optional)</div>
        </div>
      </div>
      
      <div class="text-center mt-6">
        <button type="submit" class="btn-submit">
          <i class="fas fa-save"></i> <%= isNew ? 'Create Yokai' : 'Update Yokai' %>
        </button>
      </div>
    </form>
  </div>
</div>
