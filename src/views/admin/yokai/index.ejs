<% /* Set the title and other variables for the layout */ %>
<% title = 'Manage Yokai' %>

<style>
  .yokai-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  .yokai-table th, .yokai-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .yokai-table th {
    background-color: rgba(0, 0, 0, 0.2);
    font-weight: bold;
  }

  .yokai-table tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .yokai-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-edit, .btn-delete {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .btn-edit {
    background-color: #3498db;
    color: white;
  }

  .btn-delete {
    background-color: #e74c3c;
    color: white;
  }

  .btn-edit:hover {
    background-color: #2980b9;
  }

  .btn-delete:hover {
    background-color: #c0392b;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .admin-title {
    font-size: 1.75rem;
    font-weight: bold;
  }

  .admin-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-add {
    background-color: #2ecc71;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-add:hover {
    background-color: #27ae60;
  }

  .alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .alert-success {
    background-color: rgba(46, 204, 113, 0.2);
    border: 1px solid rgba(46, 204, 113, 0.5);
    color: #2ecc71;
  }

  .alert-error {
    background-color: rgba(231, 76, 60, 0.2);
    border: 1px solid rgba(231, 76, 60, 0.5);
    color: #e74c3c;
  }

  .rank-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  }

  .rank-e { background-color: #95a5a6; color: white; }
  .rank-d { background-color: #3498db; color: white; }
  .rank-c { background-color: #2ecc71; color: white; }
  .rank-b { background-color: #f1c40f; color: black; }
  .rank-a { background-color: #e67e22; color: white; }
  .rank-s { background-color: #e74c3c; color: white; }
  .rank-ss { background-color: #9b59b6; color: white; }
  .rank-sss { background-color: #34495e; color: white; }

  .tribe-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
    margin-right: 0.25rem;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  }

  .tribe-charming { background-color: #ff7bac; color: white; }
  .tribe-heartful { background-color: #f1c40f; color: black; }
  .tribe-mysterious { background-color: #9b59b6; color: white; }
  .tribe-tough { background-color: #e74c3c; color: white; }
  .tribe-shady { background-color: #34495e; color: white; }
  .tribe-eerie { background-color: #1abc9c; color: white; }
  .tribe-slippery { background-color: #3498db; color: white; }
  .tribe-brave { background-color: #e67e22; color: white; }
  .tribe-other { background-color: #95a5a6; color: white; }

  .search-form {
    margin-bottom: 1.5rem;
    display: flex;
    gap: 0.5rem;
  }

  .search-input {
    flex: 1;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(0, 0, 0, 0.2);
    color: white;
  }

  .btn-search {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    background-color: #3498db;
    color: white;
    border: none;
    cursor: pointer;
  }

  .btn-search:hover {
    background-color: #2980b9;
  }
</style>

<div class="mt-20 mb-8">
  <div class="admin-header">
    <h1 class="admin-title">Manage Yokai</h1>
    <div class="admin-actions">
      <a href="/admin/yokai/new" class="btn-add">
        <i class="fas fa-plus"></i> Add New Yokai
      </a>
      <a href="/admin/yokai/mass-add" class="btn-add" style="background-color: #9b59b6;">
        <i class="fas fa-upload"></i> Mass Add
      </a>
    </div>
  </div>

  <% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-<%= messageType %>">
    <%= message %>
  </div>
  <% } %>

  <form class="search-form" action="/admin/yokai" method="GET">
    <input type="text" name="search" class="search-input" placeholder="Search by name, rank, or tribe..." value="<%= typeof search !== 'undefined' ? search : '' %>">
    <button type="submit" class="btn-search">
      <i class="fas fa-search"></i> Search
    </button>
  </form>

  <% if (yokai.length === 0) { %>
  <p class="text-center my-8">No Yokai found.</p>
  <% } else { %>
  <div class="overflow-x-auto">
    <table class="yokai-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Rank</th>
          <th>Tribe</th>
          <th>Attribute</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% yokai.forEach(function(yk) { %>
        <tr>
          <td><%= yk.id || 'N/A' %></td>
          <td><%= yk.Name %></td>
          <td>
            <%
              let rankClass = 'rank-e';
              if (yk.Rank === 'D') rankClass = 'rank-d';
              if (yk.Rank === 'C') rankClass = 'rank-c';
              if (yk.Rank === 'B') rankClass = 'rank-b';
              if (yk.Rank === 'A') rankClass = 'rank-a';
              if (yk.Rank === 'S') rankClass = 'rank-s';
              if (yk.Rank === 'SS') rankClass = 'rank-ss';
              if (yk.Rank === 'SSS') rankClass = 'rank-sss';
            %>
            <span class="rank-badge <%= rankClass %>"><%= yk.Rank %></span>
          </td>
          <td>
            <%
              let tribeClass = 'tribe-other';
              if (yk.Tribe === 'Charming') tribeClass = 'tribe-charming';
              if (yk.Tribe === 'Heartful') tribeClass = 'tribe-heartful';
              if (yk.Tribe === 'Mysterious') tribeClass = 'tribe-mysterious';
              if (yk.Tribe === 'Tough') tribeClass = 'tribe-tough';
              if (yk.Tribe === 'Shady') tribeClass = 'tribe-shady';
              if (yk.Tribe === 'Eerie') tribeClass = 'tribe-eerie';
              if (yk.Tribe === 'Slippery') tribeClass = 'tribe-slippery';
              if (yk.Tribe === 'Brave') tribeClass = 'tribe-brave';
            %>
            <span class="tribe-badge <%= tribeClass %>"><%= yk.Tribe %></span>
          </td>
          <td><%= yk.Attribute || 'N/A' %></td>
          <td class="yokai-actions">
            <a href="/admin/yokai/edit/<%= yk.Name %>" class="btn-edit">
              <i class="fas fa-edit"></i> Edit
            </a>
            <form action="/admin/yokai/delete/<%= yk.Name %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this Yokai?');" style="display: inline;">
              <button type="submit" class="btn-delete">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% } %>

  <!-- Pagination would go here if needed -->
</div>
