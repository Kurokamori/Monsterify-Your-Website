<% /* Set the title and other variables for the layout */ %>
<% title = 'Prompt Completions' %>

<style>
.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.admin-title {
    font-size: 2rem;
    font-weight: bold;
}

.admin-actions {
    display: flex;
    gap: 1rem;
}

.btn-back {
    background-color: #7f8c8d;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-back:hover {
    background-color: #95a5a6;
}

.alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.alert-success {
    background-color: rgba(52, 211, 153, 0.2);
    border: 1px solid rgba(52, 211, 153, 0.5);
    color: #10b981;
}

.alert-error {
    background-color: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.5);
    color: #ef4444;
}

.completions-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

.completions-table th, .completions-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.completions-table th {
    background-color: rgba(0, 0, 0, 0.2);
    font-weight: bold;
}

.completions-table tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: bold;
}

.badge-general {
    background-color: #3498db;
    color: white;
}

.badge-progression {
    background-color: #9b59b6;
    color: white;
}

.badge-legendary {
    background-color: #f1c40f;
    color: black;
}

.badge-event {
    background-color: #e74c3c;
    color: white;
}

.badge-monthly {
    background-color: #2ecc71;
    color: white;
}

.submission-link {
    color: #3498db;
    text-decoration: underline;
}

.submission-link:hover {
    color: #2980b9;
}

.date-cell {
    white-space: nowrap;
}
</style>

<div class="container mx-auto px-4 py-8">
    <div class="admin-header">
        <h1 class="admin-title">Prompt Completions</h1>
        <div class="admin-actions">
            <a href="/admin/prompts" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Prompts
            </a>
        </div>
    </div>

    <% if (message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
    <% } %>

    <% if (completions.length === 0) { %>
        <p class="text-gray-400">No prompt completions found.</p>
    <% } else { %>
        <div class="overflow-x-auto">
            <table class="completions-table">
                <thead>
                    <tr>
                        <th>Prompt</th>
                        <th>Category</th>
                        <th>Trainer</th>
                        <th>Submission</th>
                        <th>Completed At</th>
                        <th>Rewards Claimed</th>
                    </tr>
                </thead>
                <tbody>
                    <% completions.forEach(function(completion) { %>
                        <tr>
                            <td><%= completion.title || 'Unknown Prompt' %></td>
                            <td>
                                <% 
                                let badgeClass = 'badge-' + completion.category;
                                let categoryDisplay = completion.category ? completion.category.charAt(0).toUpperCase() + completion.category.slice(1) : 'Unknown';
                                %>
                                <span class="badge <%= badgeClass %>"><%= categoryDisplay %></span>
                            </td>
                            <td><%= completion.trainer_name || 'Unknown Trainer' %></td>
                            <td>
                                <a href="<%= completion.submission_url %>" target="_blank" class="submission-link">
                                    <i class="fas fa-external-link-alt"></i> View Submission
                                </a>
                            </td>
                            <td class="date-cell">
                                <%= new Date(completion.completed_at).toLocaleString() %>
                            </td>
                            <td>
                                <% if (completion.rewards_claimed) { %>
                                    <span class="text-green-500"><i class="fas fa-check"></i> Claimed</span>
                                <% } else { %>
                                    <span class="text-red-500"><i class="fas fa-times"></i> Not Claimed</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>

    <div class="mt-8">
        <a href="/admin/prompts" class="btn-secondary px-4 py-2 rounded-md" style="background-color: rgba(255, 255, 255, 0.1); color: var(--text-color);">
            <i class="fas fa-arrow-left mr-1"></i> Back to Prompts
        </a>
    </div>
</div>
