<% /* Set the title and other variables for the layout */ %>
<% title = 'Prompt Management' %>

<style>
.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.admin-title {
    font-size: 2rem;
    font-weight: bold;
}

.admin-actions {
    display: flex;
    gap: 1rem;
}

.btn-add {
    background-color: #2ecc71;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-add:hover {
    background-color: #27ae60;
}

.btn-view {
    background-color: #3498db;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-view:hover {
    background-color: #2980b9;
}

.alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.alert-success {
    background-color: rgba(52, 211, 153, 0.2);
    border: 1px solid rgba(52, 211, 153, 0.5);
    color: #10b981;
}

.alert-error {
    background-color: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.5);
    color: #ef4444;
}

.prompt-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

.prompt-table th, .prompt-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.prompt-table th {
    background-color: rgba(0, 0, 0, 0.2);
    font-weight: bold;
}

.prompt-table tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.prompt-actions {
    display: flex;
    gap: 0.5rem;
}

.btn-edit, .btn-delete {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-size: 0.875rem;
}

.btn-edit {
    background-color: #f39c12;
    color: white;
}

.btn-edit:hover {
    background-color: #e67e22;
}

.btn-delete {
    background-color: #e74c3c;
    color: white;
}

.btn-delete:hover {
    background-color: #c0392b;
}

.category-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 0.5rem;
}

.category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.category-title {
    font-size: 1.5rem;
    font-weight: bold;
    text-transform: capitalize;
}

.badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: bold;
}

.badge-active {
    background-color: #10b981;
    color: white;
}

.badge-inactive {
    background-color: #6b7280;
    color: white;
}

.badge-repeatable {
    background-color: #3b82f6;
    color: white;
}

.badge-non-repeatable {
    background-color: #8b5cf6;
    color: white;
}

.delete-form {
    display: inline;
}
</style>

<div class="container mx-auto px-4 py-8">
    <div class="admin-header">
        <h1 class="admin-title">Prompt Management</h1>
        <div class="admin-actions">
            <a href="/admin/prompts/completions" class="btn-view">
                <i class="fas fa-list"></i> View Completions
            </a>
            <a href="/admin/prompts/create" class="btn-add">
                <i class="fas fa-plus"></i> Add New Prompt
            </a>
        </div>
    </div>

    <% if (message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
    <% } %>

    <% 
    const categoryNames = {
        general: 'General Prompts',
        progression: 'Progression Prompts',
        legendary: 'Legendary Prompts',
        event: 'Event Prompts',
        monthly: 'Monthly Prompts'
    };
    
    Object.keys(promptsByCategory).forEach(function(category) { 
        const prompts = promptsByCategory[category];
    %>
        <div class="category-section">
            <div class="category-header">
                <h2 class="category-title"><%= categoryNames[category] || category %></h2>
                <span><%= prompts.length %> prompts</span>
            </div>

            <% if (prompts.length === 0) { %>
                <p class="text-gray-400">No prompts found in this category.</p>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="prompt-table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Level Req</th>
                                <% if (category === 'monthly') { %>
                                <th>Month</th>
                                <% } %>
                                <th>Status</th>
                                <th>Rewards</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% prompts.forEach(function(prompt) { %>
                                <tr>
                                    <td><%= prompt.title %></td>
                                    <td><%= prompt.min_trainer_level %></td>
                                    <% if (category === 'monthly') { %>
                                    <td><%= prompt.month || 'N/A' %></td>
                                    <% } %>
                                    <td>
                                        <% if (prompt.active) { %>
                                            <span class="badge badge-active">Active</span>
                                        <% } else { %>
                                            <span class="badge badge-inactive">Inactive</span>
                                        <% } %>
                                        
                                        <% if (prompt.repeatable) { %>
                                            <span class="badge badge-repeatable">Repeatable</span>
                                        <% } else { %>
                                            <span class="badge badge-non-repeatable">One-time</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% 
                                        const rewards = [];
                                        if (prompt.reward_coins > 0) rewards.push(`${prompt.reward_coins} coins`);
                                        if (prompt.reward_levels > 0) rewards.push(`${prompt.reward_levels} levels`);
                                        if (prompt.reward_items) rewards.push('items');
                                        if (prompt.reward_random_items) rewards.push('random items');
                                        if (prompt.reward_monster_params) rewards.push('monster');
                                        %>
                                        <%= rewards.join(', ') || 'None' %>
                                    </td>
                                    <td class="prompt-actions">
                                        <a href="/admin/prompts/edit/<%= prompt.prompt_id %>" class="btn-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form class="delete-form" action="/admin/prompts/delete/<%= prompt.prompt_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this prompt?');">
                                            <button type="submit" class="btn-delete">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    <% }); %>

    <div class="mt-8">
        <a href="/admin/dashboard" class="btn-secondary px-4 py-2 rounded-md" style="background-color: rgba(255, 255, 255, 0.1); color: var(--text-color);">
            <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
        </a>
    </div>
</div>
