<% /* Set the title and other variables for the layout */ %>
<% title = 'Edit Area' %>

<div class="container mx-auto px-4 py-6">
  <div class="flex items-center mb-6">
    <a href="/admin/areas" class="btn-secondary mr-4">
      <i class="fas fa-arrow-left mr-2"></i> Back to Areas
    </a>
    <h1 class="text-2xl font-bold">Edit Area: <%= area.name %></h1>
  </div>

  <div class="bg-gray-900 border border-gray-800 rounded-lg shadow-lg p-6">
    <form action="/admin/areas/edit/<%= area.area_id %>" method="POST">
      <div class="mb-4">
        <label for="region_id" class="block text-sm font-medium text-gray-300 mb-2">Region *</label>
        <select id="region_id" name="region_id" required
                class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
          <option value="">Select a region</option>
          <% regions.forEach(region => { %>
            <option value="<%= region.region_id %>" <%= area.region_id === region.region_id ? 'selected' : '' %>>
              <%= region.name %>
            </option>
          <% }); %>
        </select>
      </div>

      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Area Name *</label>
        <input type="text" id="name" name="name" value="<%= area.name %>" required
               class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div class="mb-4">
        <label for="description" class="block text-sm font-medium text-gray-300 mb-2">Description</label>
        <textarea id="description" name="description" rows="4"
                  class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500"><%= area.description || '' %></textarea>
      </div>

      <div class="mb-4">
        <label for="image_url" class="block text-sm font-medium text-gray-300 mb-2">Image URL</label>
        <input type="url" id="image_url" name="image_url" value="<%= area.image_url || '' %>"
               class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <p class="mt-1 text-sm text-gray-400">Enter a URL for the area image. Recommended size: 1200x400 pixels.</p>
      </div>

      <div class="mb-4">
        <label for="difficulty" class="block text-sm font-medium text-gray-300 mb-2">Difficulty</label>
        <select id="difficulty" name="difficulty"
                class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
          <option value="easy" <%= area.difficulty === 'easy' ? 'selected' : '' %>>Easy</option>
          <option value="normal" <%= area.difficulty === 'normal' || !area.difficulty ? 'selected' : '' %>>Normal</option>
          <option value="hard" <%= area.difficulty === 'hard' ? 'selected' : '' %>>Hard</option>
          <option value="expert" <%= area.difficulty === 'expert' ? 'selected' : '' %>>Expert</option>
        </select>
        <p class="mt-1 text-sm text-gray-400">Select the difficulty level of this area.</p>
      </div>

      <div class="mb-6">
        <label class="flex items-center">
          <input type="checkbox" name="is_active" <%= area.is_active ? 'checked' : '' %>
                 class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 rounded bg-gray-800">
          <span class="ml-2 text-sm text-gray-300">Active</span>
        </label>
        <p class="mt-1 text-sm text-gray-400">Inactive areas will not be shown to users.</p>
      </div>

      <% if (area.image_url) { %>
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-300 mb-2">Current Image</label>
          <img src="<%= area.image_url %>" alt="<%= area.name %>" class="h-40 object-cover rounded">
        </div>
      <% } %>

      <div class="flex justify-end">
        <a href="/admin/areas" class="btn-secondary mr-2">Cancel</a>
        <button type="submit" class="btn-primary">Update Area</button>
      </div>
    </form>
  </div>
</div>

<style>
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-weight: 500;
    color: white;
    background-color: #4f46e5;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
    text-decoration: none;
  }

  .btn-primary:hover {
    background-color: #4338ca;
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-weight: 500;
    color: white;
    background-color: #6b7280;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
    text-decoration: none;
  }

  .btn-secondary:hover {
    background-color: #4b5563;
  }
</style>
