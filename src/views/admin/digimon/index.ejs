<% /* Set the title and other variables for the layout */ %>
<% title = 'Manage Digimon' %>

<style>
  .digimon-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  .digimon-table th, .digimon-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .digimon-table th {
    background-color: rgba(0, 0, 0, 0.2);
    font-weight: bold;
  }

  .digimon-table tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .digimon-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-edit, .btn-delete {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .btn-edit {
    background-color: #3498db;
    color: white;
  }

  .btn-delete {
    background-color: #e74c3c;
    color: white;
  }

  .btn-edit:hover {
    background-color: #2980b9;
  }

  .btn-delete:hover {
    background-color: #c0392b;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .admin-title {
    font-size: 1.75rem;
    font-weight: bold;
  }

  .admin-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-add {
    background-color: #2ecc71;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-add:hover {
    background-color: #27ae60;
  }

  .alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .alert-success {
    background-color: rgba(46, 204, 113, 0.2);
    border: 1px solid rgba(46, 204, 113, 0.5);
    color: #2ecc71;
  }

  .alert-error {
    background-color: rgba(231, 76, 60, 0.2);
    border: 1px solid rgba(231, 76, 60, 0.5);
    color: #e74c3c;
  }

  .attribute-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
    margin-right: 0.25rem;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  }

  .attribute-vaccine { background-color: #4CAF50; color: white; }
  .attribute-data { background-color: #2196F3; color: white; }
  .attribute-virus { background-color: #F44336; color: white; }
  .attribute-free { background-color: #9C27B0; color: white; }
  .attribute-variable { background-color: #FF9800; color: black; }

  .search-form {
    margin-bottom: 1.5rem;
    display: flex;
    gap: 0.5rem;
  }

  .search-input {
    flex: 1;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(0, 0, 0, 0.2);
    color: white;
  }

  .btn-search {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    background-color: #3498db;
    color: white;
    border: none;
    cursor: pointer;
  }

  .btn-search:hover {
    background-color: #2980b9;
  }
</style>

<div class="mt-20 mb-8">
  <div class="admin-header">
    <h1 class="admin-title">Manage Digimon</h1>
    <div class="admin-actions">
      <a href="/admin/digimon/new" class="btn-add">
        <i class="fas fa-plus"></i> Add New Digimon
      </a>
      <a href="/admin/digimon/mass-add" class="btn-add" style="background-color: #9b59b6;">
        <i class="fas fa-upload"></i> Mass Add
      </a>
    </div>
  </div>

  <% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-<%= messageType %>">
    <%= message %>
  </div>
  <% } %>

  <form class="search-form" action="/admin/digimon" method="GET">
    <input type="text" name="search" class="search-input" placeholder="Search by name, stage, or attribute..." value="<%= typeof search !== 'undefined' ? search : '' %>">
    <button type="submit" class="btn-search">
      <i class="fas fa-search"></i> Search
    </button>
  </form>

  <% if (digimon.length === 0) { %>
  <p class="text-center my-8">No Digimon found.</p>
  <% } else { %>
  <div class="overflow-x-auto">
    <table class="digimon-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Stage</th>
          <th>Attributes</th>
          <th>Types</th>
          <th>X-Antibody</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% digimon.forEach(function(digi) { %>
        <tr>
          <td><%= digi.id || 'N/A' %></td>
          <td><%= digi.name %></td>
          <td><%= digi.Stage %></td>
          <td>
            <% if (digi.attributes) { %>
              <%
                const attributeList = digi.attributes.split(',').map(a => a.trim());
                attributeList.forEach(function(attr) {
                  let className = 'attribute-free';
                  if (attr.toLowerCase().includes('vaccine')) className = 'attribute-vaccine';
                  if (attr.toLowerCase().includes('data')) className = 'attribute-data';
                  if (attr.toLowerCase().includes('virus')) className = 'attribute-virus';
                  if (attr.toLowerCase().includes('variable')) className = 'attribute-variable';
              %>
                <span class="attribute-badge <%= className %>"><%= attr %></span>
              <% }); %>
            <% } else { %>
              N/A
            <% } %>
          </td>
          <td><%= digi.types || 'N/A' %></td>
          <td><%= digi.xAntibody ? 'Yes' : 'No' %></td>
          <td class="digimon-actions">
            <a href="/admin/digimon/edit/<%= digi.name %>" class="btn-edit">
              <i class="fas fa-edit"></i> Edit
            </a>
            <form action="/admin/digimon/delete/<%= digi.name %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this Digimon?');" style="display: inline;">
              <button type="submit" class="btn-delete">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% } %>

  <!-- Pagination would go here if needed -->
</div>
