<% /* Set the title and other variables for the layout */ %>
<% title = 'Create New Boss' %>

<style>
.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.form-input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.25rem;
    background-color: #f8fafc;
}

.form-textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.25rem;
    background-color: #f8fafc;
    min-height: 100px;
}

.form-input:focus, .form-textarea:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
}

.alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.alert-error {
    background-color: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.5);
    color: #ef4444;
}

.required-field::after {
    content: "*";
    color: #ef4444;
    margin-left: 0.25rem;
}
</style>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Create New Boss</h1>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType %> mb-6">
        <%= message %>
    </div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <h2 class="text-xl font-bold">Boss Details</h2>
        </div>
        <div class="card-body">
            <form action="/admin/bosses/create" method="POST">
                <div class="form-group">
                    <label for="name" class="form-label required-field">Name</label>
                    <input type="text" id="name" name="name" class="form-input" required value="<%= typeof formData !== 'undefined' ? formData.name : '' %>">
                </div>

                <div class="form-group">
                    <label for="flavor_text" class="form-label">Flavor Text</label>
                    <textarea id="flavor_text" name="flavor_text" class="form-textarea"><%= typeof formData !== 'undefined' ? formData.flavor_text : '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="image_url" class="form-label">Image URL</label>
                    <input type="text" id="image_url" name="image_url" class="form-input" value="<%= typeof formData !== 'undefined' ? formData.image_url : '' %>">
                    <p class="text-sm text-gray-500 mt-1">Enter a URL for the boss image</p>
                </div>

                <div class="form-group">
                    <label for="max_health" class="form-label required-field">Max Health</label>
                    <input type="number" id="max_health" name="max_health" class="form-input" required min="1" value="<%= typeof formData !== 'undefined' ? formData.max_health : '10000' %>">
                    <p class="text-sm text-gray-500 mt-1">Recommended: 10,000 for small events, 50,000 for medium events, 100,000+ for large events</p>
                </div>

                <div class="flex justify-end space-x-4 mt-6">
                    <a href="/admin/bosses" class="btn-secondary">Cancel</a>
                    <button type="submit" class="btn-primary">Create Boss</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-6">
        <a href="/admin/bosses" class="btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i> Back to Boss Management
        </a>
    </div>
</div>
