
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Assign Reward Templates to <%= boss.name %></h1>
        <a href="/admin/bosses" class="btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i> Back to Bosses
        </a>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType || 'success' %> mb-6">
        <%= message %>
    </div>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Boss Information -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-bold">Boss Details</h2>
            </div>
            <div class="card-body">
                <div class="boss-preview">
                    <img src="<%= boss.image_url %>" alt="<%= boss.name %>" class="boss-preview-image" onerror="this.src='/images/default_boss.png'">
                    <div class="boss-preview-details">
                        <div class="boss-preview-name"><%= boss.name %></div>
                        <div class="boss-preview-health"><%= boss.current_health %> / <%= boss.max_health %> HP</div>
                        <div>
                            <% if (boss.is_active && !boss.is_defeated) { %>
                            <span class="boss-preview-status status-active">Active</span>
                            <% } else if (boss.is_defeated) { %>
                            <span class="boss-preview-status status-defeated">Defeated</span>
                            <% } else { %>
                            <span class="boss-preview-status status-inactive">Inactive</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assigned Templates -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-bold">Assigned Templates</h2>
            </div>
            <div class="card-body">
                <% if (assignedTemplates && assignedTemplates.length > 0) { %>
                <div class="assigned-templates">
                    <% assignedTemplates.forEach(function(template) { %>
                    <div class="assigned-template">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="template-name"><%= template.name %></h3>
                                <p class="template-description"><%= template.description || 'No description' %></p>
                                <div class="template-details">
                                    <span class="template-detail">Coins: <%= template.coins || 0 %></span>
                                    <span class="template-detail">Levels: <%= template.levels || 0 %></span>
                                    <% if (template.is_top_damager) { %>
                                    <span class="template-detail top-damager">Top Damager</span>
                                    <% } %>
                                </div>
                            </div>
                            <form action="/admin/bosses/unassign-template" method="POST" class="inline">
                                <input type="hidden" name="boss_id" value="<%= boss.boss_id %>">
                                <input type="hidden" name="template_id" value="<%= template.template_id %>">
                                <button type="submit" class="btn-delete">
                                    <i class="fas fa-times"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } else { %>
                <div class="text-center py-4">
                    <p class="text-gray-500">No templates assigned to this boss yet.</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Available Templates -->
    <div class="card mt-6">
        <div class="card-header">
            <h2 class="text-xl font-bold">Available Templates</h2>
        </div>
        <div class="card-body">
            <% if (availableTemplates && availableTemplates.length > 0) { %>
            <form action="/admin/bosses/assign-template" method="POST">
                <input type="hidden" name="boss_id" value="<%= boss.boss_id %>">
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% availableTemplates.forEach(function(template) { %>
                    <div class="template-card">
                        <div class="template-card-header">
                            <h3 class="template-card-name"><%= template.name %></h3>
                            <% if (template.is_top_damager) { %>
                            <span class="template-card-badge">Top Damager</span>
                            <% } %>
                        </div>
                        <div class="template-card-body">
                            <p class="template-card-description"><%= template.description || 'No description' %></p>
                            <div class="template-card-details">
                                <div class="template-card-detail">
                                    <i class="fas fa-coins text-yellow-500"></i>
                                    <span><%= template.coins || 0 %> Coins</span>
                                </div>
                                <div class="template-card-detail">
                                    <i class="fas fa-level-up-alt text-blue-500"></i>
                                    <span><%= template.levels || 0 %> Levels</span>
                                </div>
                                <div class="template-card-detail">
                                    <i class="fas fa-box text-purple-500"></i>
                                    <span><%= template.items && template.items.items ? template.items.items.length : 0 %> Items</span>
                                </div>
                                <div class="template-card-detail">
                                    <i class="fas fa-dragon text-green-500"></i>
                                    <span><%= template.monsters && template.monsters.monsters ? template.monsters.monsters.length : 0 %> Monsters</span>
                                </div>
                            </div>
                        </div>
                        <div class="template-card-footer">
                            <div class="form-group">
                                <input type="checkbox" id="template_<%= template.template_id %>" name="template_ids[]" value="<%= template.template_id %>" class="form-checkbox">
                                <label for="template_<%= template.template_id %>" class="ml-2">Select</label>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                
                <div class="mt-6">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-plus mr-2"></i> Assign Selected Templates
                    </button>
                </div>
            </form>
            <% } else { %>
            <div class="text-center py-8">
                <p class="text-gray-500">No available templates found. <a href="/admin/bosses/reward-templates/create" class="text-blue-500 hover:underline">Create a template</a> first.</p>
            </div>
            <% } %>
        </div>
    </div>
</div>

