<% /* Set the title and other variables for the layout */ %>
<% title = 'Boss Management' %>

<style>
.boss-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

.boss-table th, .boss-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid #e2e8f0;
}

.boss-table th {
    background-color: #f8fafc;
    font-weight: bold;
}

.boss-table tr:hover {
    background-color: #f1f5f9;
}

.boss-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 0.25rem;
}

.boss-actions {
    display: flex;
    gap: 0.5rem;
}

.btn-view, .btn-edit, .btn-delete, .btn-reward {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-size: 0.875rem;
}

.btn-view {
    background-color: #3b82f6;
    color: white;
}

.btn-reward {
    background-color: #8b5cf6;
    color: white;
}

.btn-edit {
    background-color: #f59e0b;
    color: white;
}

.btn-delete {
    background-color: #ef4444;
    color: white;
}

.status-active {
    background-color: #10b981;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: bold;
}

.status-inactive {
    background-color: #6b7280;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: bold;
}

.status-defeated {
    background-color: #ef4444;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: bold;
}

.alert {
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.alert-success {
    background-color: rgba(52, 211, 153, 0.2);
    border: 1px solid rgba(52, 211, 153, 0.5);
    color: #10b981;
}

.alert-error {
    background-color: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.5);
    color: #ef4444;
}
</style>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Boss Management</h1>
        <div class="flex space-x-4">
            <a href="/admin/bosses/reward-templates" class="btn-secondary">
                <i class="fas fa-gift mr-2"></i> Reward Templates
            </a>
            <a href="/admin/bosses/create" class="btn-primary">
                <i class="fas fa-plus mr-2"></i> Create New Boss
            </a>
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType %> mb-6">
        <%= message %>
    </div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <h2 class="text-xl font-bold">All Bosses</h2>
        </div>
        <div class="card-body">
            <% if (bosses && bosses.length > 0) { %>
            <table class="boss-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Health</th>
                        <th>Month/Year</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bosses.forEach(function(boss) { %>
                    <tr>
                        <td>
                            <img src="<%= boss.image_url %>" alt="<%= boss.name %>" class="boss-image" onerror="this.src='/images/default_boss.png'">
                        </td>
                        <td><%= boss.name %></td>
                        <td><%= boss.current_health %> / <%= boss.max_health %></td>
                        <td><%= boss.month %>/<%= boss.year %></td>
                        <td>
                            <% if (boss.is_active && !boss.is_defeated) { %>
                            <span class="status-active">Active</span>
                            <% } else if (boss.is_defeated) { %>
                            <span class="status-defeated">Defeated</span>
                            <% } else { %>
                            <span class="status-inactive">Inactive</span>
                            <% } %>
                        </td>
                        <td><%= new Date(boss.created_at).toLocaleDateString() %></td>
                        <td class="boss-actions">
                            <a href="/adventures/boss" class="btn-view" target="_blank" title="View Boss">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admin/bosses/edit/<%= boss.boss_id %>" class="btn-edit" title="Edit Boss">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admin/bosses/reward-templates/assign/<%= boss.boss_id %>" class="btn-reward" title="Assign Rewards">
                                <i class="fas fa-gift"></i>
                            </a>
                            <a href="/admin/bosses/delete/<%= boss.boss_id %>" class="btn-delete" title="Delete Boss">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <div class="text-center py-8">
                <p class="text-gray-500">No bosses found. Create your first boss!</p>
            </div>
            <% } %>
        </div>
    </div>

    <div class="mt-6">
        <a href="/admin/dashboard" class="btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
    </div>
</div>
