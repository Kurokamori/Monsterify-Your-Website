<!-- Immediate mobile menu script to ensure functionality -->
<script>
    // This script runs immediately to ensure mobile menu functionality
    window.addEventListener('load', function () {
        console.log('Window loaded - immediate script');

        // Setup mobile menu functionality
        function setupMobileMenu() {
            const mobileMenuButton = document.getElementById('mobileMenuButton');
            const mobileNav = document.getElementById('mobileNav');
            const mobileNavClose = document.getElementById('mobileNavClose');

            if (mobileMenuButton && mobileNav) {
                console.log('Setting up mobile menu button click handler');

                // Direct click handler for mobile menu button
                mobileMenuButton.onclick = function (e) {
                    console.log('Mobile menu button clicked (direct)');
                    if (e) e.preventDefault();

                    // Show mobile menu
                    mobileNav.classList.add('active');
                    mobileNav.style.transform = 'translateX(0)';
                    mobileNav.style.visibility = 'visible';
                    mobileNav.style.pointerEvents = 'auto';
                    document.body.style.overflow = 'hidden';
                };

                // Direct click handler for close button
                if (mobileNavClose) {
                    mobileNavClose.onclick = function (e) {
                        console.log('Mobile menu close button clicked (direct)');
                        if (e) e.preventDefault();

                        // Hide mobile menu
                        mobileNav.classList.remove('active');
                        mobileNav.style.transform = 'translateX(-100%)';
                        mobileNav.style.visibility = 'visible';
                        mobileNav.style.pointerEvents = 'none';
                        document.body.style.overflow = '';
                    };
                }
            }
        }

        // Run setup immediately
        setupMobileMenu();

        // Also run after a short delay to ensure DOM is fully processed
        setTimeout(setupMobileMenu, 500);
    });
</script>

