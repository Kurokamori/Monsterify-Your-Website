            <% regions.forEach(region => { %>
              <div class="location-card region-card cursor-pointer shadow-xl" onclick="window.location.href='/guides/locations/region/<%= region.slug %>'">
                <div class="relative image-container">
                  <img src="<%= region.image %>" alt="<%= region.name %>" class="rounded-t-lg">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <h3 class="text-3xl font-bold text-white text-shadow-lg"><%= region.name %></h3>
                  </div>
                </div>
                <div class="location-card-content p-6">
                  <p class="location-card-description text-base text-gray-300"><%= region.description %></p>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else if (level === 'areas') { %>
          <!-- Areas Grid for a specific region -->
          <div class="flex justify-between items-center mb-6">
            <div>
              <h1 class="text-3xl font-bold"><%= currentRegion.name %></h1>
            </div>
            <div>
              <a href="/guides/locations" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to Regions
              </a>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-8">
            <% areas.forEach(area => { %>
              <div class="location-card cursor-pointer" onclick="window.location.href='/guides/locations/area/<%= currentRegion.slug %>/<%= area.slug %>'">
                <div class="relative image-container">
                  <img src="<%= area.image %>" alt="<%= area.name %>" class="rounded-t-lg">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <h3 class="text-xl font-bold text-white text-shadow-lg"><%= area.name %></h3>
                  </div>
                </div>
                <div class="location-card-content">
                  <p class="location-card-description text-sm text-gray-300"><%= area.description %></p>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else if (level === 'locations') { %>
          <!-- Locations Grid for a specific area -->
          <div class="flex justify-between items-center mb-6">
            <div>
              <h1 class="text-3xl font-bold"><%= currentArea.name %></h1>
            </div>
            <div>
              <a href="/guides/locations/region/<%= currentRegion.slug %>" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to <%= currentRegion.name %>
              </a>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-8">
            <% locations.forEach(location => { %>
              <div class="location-card cursor-pointer" onclick="window.location.href='/guides/locations/detail/<%= currentRegion.slug %>/<%= currentArea.slug %>/<%= location.slug %>'">
                <div class="relative image-container">
                  <img src="<%= location.image %>" alt="<%= location.name %>" class="rounded-t-lg">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <h3 class="text-xl font-bold text-white text-shadow-lg"><%= location.name %></h3>
                  </div>
                </div>
                <div class="location-card-content">
                  <p class="location-card-description text-sm text-gray-300"><%= location.description %></p>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else if (level === 'detail') { %>
          <!-- Location Detail View -->
          <div class="flex justify-between items-center mb-6">
            <div>
              <h1 class="text-3xl font-bold"><%= currentLocation.name %></h1>
            </div>
            <div>
              <a href="/guides/locations/area/<%= currentRegion.slug %>/<%= currentArea.slug %>" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to <%= currentArea.name %>
              </a>
            </div>
          </div>

          <div class="location-detail">
            <div class="relative mb-6">
              <img src="<%= currentLocation.image %>" alt="<%= currentLocation.name %>" class="w-full h-64 object-cover rounded-lg">
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-lg"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <!-- Location name is now in the navigation bar -->
              </div>
            </div>

            <div class="location-content bg-card-background rounded-lg p-6">
              <%- locationContent %>
            </div>
          </div>
        <% } %>
      </div>

