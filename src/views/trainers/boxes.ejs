<% /* Set the title and other variables for the layout */ %>
<% title = title || `${trainer.name} - All Boxes` %>
<div class="full-width-section">
    <div class="container">
        <span></span>
    </div>
</div>

<div class="full-width-content">
    <div class="trainer-page-layout">
        <!-- Side Navigation -->
        <% const active = 'boxes'; %>
        <%- include('../partials/trainer_sidebar', { trainer, active }) %>

        <!-- Main Content -->
        <div class="trainer-main-content">
            <div class="pc-header">
                <h1 class="text-4xl font-display font-bold mb-4">
                    <%= trainer.name %>'s Boxes
                </h1>

                <% if (isOwnTrainer) { %>
                <div class="box-actions">
                    <button id="save-boxes-btn" class="box-action-link" style="display: none;">Save Changes</button>
                    <button id="cancel-edit-btn" class="box-action-link" style="display: none;">Cancel</button>
                </div>
                <% } %>
            </div>

            <!-- All Boxes Container -->
            <div class="all-boxes-container">
                <!-- Battle Box -->
                <div class="box-section battle-box-section">
                    <h2 class="box-title">Battle Box</h2>
                    <div class="battle-box-grid" data-box-number="-1">
                    <% for (let i = 0; i < 6; i++) { %>
                        <% const monster = battleBoxMonsters[i]; %>
                        <div class="box-slot <%= monster ? 'filled' : 'empty' %>"
                             data-slot="<%= i %>"
                             <% if (monster) { %>
                                data-monster-id="<%= monster.mon_id %>"
                                data-trainer-index="<%= monster.trainer_index %>"
                             <% } %>>
                            <% if (monster) { %>
                                <a href="/trainers/<%= trainer.id %>/monsters/<%= monster.mon_id %>"
                                   class="monster-link box-slot"
                                   title="<%= monster.name %> (Level <%= monster.level %>)">
                                    <div class="box-slot">
                                        <img src="<%= monster.img_link || '/images/default_mon.png' %>"
                                         alt="<%= monster.name %>"
                                         onerror="this.src='/images/default_mon.png'">
                                    </div>
                                    <div class="box-slot-overlay">
                                        <span class="box-slot-name"><%= monster.name %></span>
                                    </div>
                                </a>
                            <% } else { %>
                                <!-- Empty slot with default image -->
                                <div class="empty-slot-placeholder">
                                    <img src="/images/default_mon.png" alt="Empty Slot" class="empty-slot-image">
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>

                <!-- Regular Boxes -->
                <% regularBoxes.forEach(box => { %>
                    <div class="box-section regular-box-section">
                        <h2 class="box-title">Box <%= box.boxNumber %></h2>
                        <div class="regular-box-grid" data-box-number="<%= box.boxNumber %>">
                            <% for (let i = 0; i < 30; i++) { %>
                                <% const monster = box.monsters[i]; %>
                                <div class="box-slot <%= monster ? 'filled' : 'empty' %>"
                                     data-slot="<%= i %>"
                                     <% if (monster) { %>
                                        data-monster-id="<%= monster.mon_id %>"
                                        data-trainer-index="<%= monster.trainer_index %>"
                                     <% } %>>
                                    <% if (monster) { %>
                                        <a href="/trainers/<%= trainer.id %>/monsters/<%= monster.mon_id %>"
                                           class="monster-link"
                                           title="<%= monster.name %> (Level <%= monster.level %>)">
                                            <img src="<%= monster.img_link || '/images/default_mon.png' %>"
                                                 alt="<%= monster.name %>"
                                                 onerror="this.src='/images/default_mon.png'">
                                            <div class="box-slot-overlay">
                                                <span class="box-slot-name"><%= monster.name %></span>
                                            </div>
                                        </a>
                                    <% } else { %>
                                        <!-- Empty slot with default image -->
                                        <div class="empty-slot-placeholder">
                                            <img src="/images/default_mon.png" alt="Empty Slot" class="empty-slot-image">
                                        </div>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Status Message -->
            <div id="status-message" class="status-message"></div>
        </div>
    </div>
</div>

<% if (isOwnTrainer) { %>
<!-- Drag and Drop Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebarEditBoxesBtn = document.getElementById('sidebar-edit-boxes');
    const saveBoxesBtn = document.getElementById('save-boxes-btn');
    const cancelEditBtn = document.getElementById('cancel-edit-btn');
    const statusMessage = document.getElementById('status-message');

    // Get all box slots and monster links
    const boxSlots = document.querySelectorAll('.box-slot');
    const monsterLinks = document.querySelectorAll('.monster-link');

    let isEditMode = false;
    let draggedElement = null;
    let originalBoxes = {};

    // Check if we're on the edit-boxes page and automatically enable edit mode
    const currentPath = window.location.pathname;
    const isEditBoxesPage = currentPath.endsWith('/edit-boxes');

    // Store the original state of boxes
    function saveOriginalState() {
        document.querySelectorAll('.battle-box-grid, .regular-box-grid').forEach(grid => {
            const boxNumber = grid.dataset.boxNumber;
            originalBoxes[boxNumber] = [];

            grid.querySelectorAll('.box-slot').forEach((slot, index) => {
                originalBoxes[boxNumber][index] = {
                    monsterId: slot.dataset.monsterId || null,
                    trainerIndex: slot.dataset.trainerIndex || null,
                    html: slot.innerHTML
                };
            });
        });
    }

    // Restore the original state of boxes
    function restoreOriginalState() {
        document.querySelectorAll('.battle-box-grid, .regular-box-grid').forEach(grid => {
            const boxNumber = grid.dataset.boxNumber;

            grid.querySelectorAll('.box-slot').forEach((slot, index) => {
                const originalData = originalBoxes[boxNumber][index];

                if (originalData) {
                    slot.innerHTML = originalData.html;
                    slot.classList.toggle('filled', !!originalData.monsterId);
                    slot.classList.toggle('empty', !originalData.monsterId);

                    if (originalData.monsterId) {
                        slot.dataset.monsterId = originalData.monsterId;
                        slot.dataset.trainerIndex = originalData.trainerIndex;
                    } else {
                        delete slot.dataset.monsterId;
                        delete slot.dataset.trainerIndex;
                    }
                }
            });
        });
    }

    // Enable edit mode
    function enableEditMode(e) {
        if (e) e.preventDefault();
        isEditMode = true;
        saveOriginalState();

        saveBoxesBtn.style.display = 'inline-block';
        cancelEditBtn.style.display = 'inline-block';

        // Disable monster links
        monsterLinks.forEach(link => {
            link.addEventListener('click', preventDefaultClick);
        });

        // Add drag and drop functionality
        boxSlots.forEach(slot => {
            slot.setAttribute('draggable', true);
            slot.addEventListener('dragstart', handleDragStart);
            slot.addEventListener('dragover', handleDragOver);
            slot.addEventListener('dragenter', handleDragEnter);
            slot.addEventListener('dragleave', handleDragLeave);
            slot.addEventListener('drop', handleDrop);
            slot.addEventListener('dragend', handleDragEnd);
        });

        document.querySelectorAll('.box-section').forEach(section => {
            section.classList.add('edit-mode');
        });

        showStatusMessage('Edit mode enabled. Drag and drop monsters to rearrange them.', 'info');
    }

    // Disable edit mode
    function disableEditMode() {
        isEditMode = false;

        saveBoxesBtn.style.display = 'none';
        cancelEditBtn.style.display = 'none';

        // Re-enable monster links
        monsterLinks.forEach(link => {
            link.removeEventListener('click', preventDefaultClick);
        });

        // Remove drag and drop functionality
        boxSlots.forEach(slot => {
            slot.removeAttribute('draggable');
            slot.removeEventListener('dragstart', handleDragStart);
            slot.removeEventListener('dragover', handleDragOver);
            slot.removeEventListener('dragenter', handleDragEnter);
            slot.removeEventListener('dragleave', handleDragLeave);
            slot.removeEventListener('drop', handleDrop);
            slot.removeEventListener('dragend', handleDragEnd);
        });

        document.querySelectorAll('.box-section').forEach(section => {
            section.classList.remove('edit-mode');
        });
    }

    // Prevent default click behavior during edit mode
    function preventDefaultClick(e) {
        if (isEditMode) {
            e.preventDefault();
        }
    }

    // Show status message
    function showStatusMessage(message, type = 'info') {
        statusMessage.textContent = message;
        statusMessage.className = `status-message ${type}`;
        statusMessage.style.display = 'block';

        setTimeout(() => {
            statusMessage.style.display = 'none';
        }, 5000);
    }

    // Drag and drop handlers
    function handleDragStart(e) {
        if (!isEditMode) return;

        draggedElement = this;
        e.dataTransfer.effectAllowed = 'move';
        e.dataTransfer.setData('text/html', this.innerHTML);
        this.classList.add('dragging');
    }

    function handleDragOver(e) {
        if (!isEditMode) return;

        e.preventDefault();
        e.dataTransfer.dropEffect = 'move';
        return false;
    }

    function handleDragEnter(e) {
        if (!isEditMode) return;

        this.classList.add('drag-over');
    }

    function handleDragLeave(e) {
        if (!isEditMode) return;

        this.classList.remove('drag-over');
    }

    function handleDrop(e) {
        if (!isEditMode) return;

        e.stopPropagation();
        e.preventDefault();

        this.classList.remove('drag-over');

        if (draggedElement !== this) {
            // Swap the contents and data attributes
            const targetHTML = this.innerHTML;
            const targetMonsterId = this.dataset.monsterId;
            const targetTrainerIndex = this.dataset.trainerIndex;
            const targetIsFilled = this.classList.contains('filled');

            // Update target with source data
            this.innerHTML = draggedElement.innerHTML;
            if (draggedElement.dataset.monsterId) {
                this.dataset.monsterId = draggedElement.dataset.monsterId;
                this.dataset.trainerIndex = draggedElement.dataset.trainerIndex;
                this.classList.add('filled');
                this.classList.remove('empty');
            } else {
                delete this.dataset.monsterId;
                delete this.dataset.trainerIndex;
                this.classList.remove('filled');
                this.classList.add('empty');
            }

            // Update source with target data
            draggedElement.innerHTML = targetHTML;
            if (targetMonsterId) {
                draggedElement.dataset.monsterId = targetMonsterId;
                draggedElement.dataset.trainerIndex = targetTrainerIndex;
                draggedElement.classList.add('filled');
                draggedElement.classList.remove('empty');
            } else {
                delete draggedElement.dataset.monsterId;
                delete draggedElement.dataset.trainerIndex;
                draggedElement.classList.remove('filled');
                draggedElement.classList.add('empty');
            }
        }

        return false;
    }

    function handleDragEnd(e) {
        if (!isEditMode) return;

        this.classList.remove('dragging');

        document.querySelectorAll('.box-slot').forEach(slot => {
            slot.classList.remove('drag-over');
        });
    }

    // Save changes to the server
    async function saveChanges() {
        const updates = [];

        // Collect all monsters and their new positions
        document.querySelectorAll('.battle-box-grid, .regular-box-grid').forEach(grid => {
            const boxNumber = parseInt(grid.dataset.boxNumber);

            grid.querySelectorAll('.box-slot').forEach((slot, index) => {
                if (slot.dataset.monsterId) {
                    updates.push({
                        monId: parseInt(slot.dataset.monsterId),
                        boxNumber: boxNumber,
                        trainerIndex: index
                    });
                }
            });
        });

        try {
            showStatusMessage('Saving changes...', 'info');

            // Add CSRF token if available
            const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
            const headers = {
                'Content-Type': 'application/json'
            };

            if (csrfToken) {
                headers['X-CSRF-Token'] = csrfToken;
            }

            const response = await fetch(`/api/trainers/<%= trainer.id %>/update-boxes`, {
                method: 'POST',
                headers: headers,
                body: JSON.stringify({ updates }),
                credentials: 'same-origin'
            });

            const data = await response.json();

            if (response.ok) {
                showStatusMessage('Changes saved successfully!', 'success');
                disableEditMode();

                // Reload the page after a short delay to show the updated boxes
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                showStatusMessage(`Error: ${data.error || 'Failed to save changes'}`, 'error');
            }
        } catch (error) {
            console.error('Error saving changes:', error);
            showStatusMessage('Error: Failed to save changes', 'error');
        }
    }

    // Event listeners
    sidebarEditBoxesBtn.addEventListener('click', enableEditMode);

    saveBoxesBtn.addEventListener('click', saveChanges);

    cancelEditBtn.addEventListener('click', () => {
        restoreOriginalState();
        disableEditMode();
        showStatusMessage('Edit cancelled. No changes were saved.', 'info');
    });

    // Automatically enable edit mode if we're on the edit-boxes page
    if (isEditBoxesPage) {
        // Use setTimeout to ensure the DOM is fully loaded
        setTimeout(() => {
            enableEditMode();
        }, 100);
    }
});
</script>
<% } %>

