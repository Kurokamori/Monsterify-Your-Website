<% /* Set the title and other variables for the layout */ %>
<% title = `Roll Starters - Set ${currentSet} of 3` %>

<style>
.starter-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    background: rgba(30, 37, 50, 0.5);
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.starter-title {
    text-align: center;
    margin-bottom: 2rem;
}

.starter-subtitle {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
}

.starter-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.starter-card {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
    cursor: pointer;
}

.starter-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border-color: var(--accent-color, #d4b3ff);
}

.starter-card-header {
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.5rem;
}

.starter-card-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--accent-color, #d4b3ff);
}

.starter-card-body {
    margin-bottom: 1rem;
}

.starter-card-section {
    margin-bottom: 0.5rem;
}

.starter-card-section-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--accent-color, #d4b3ff);
    font-size: 0.9rem;
}

.starter-type {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-right: 0.25rem;
    margin-bottom: 0.25rem;
    font-size: 0.8rem;
    font-weight: 600;
}

.starter-type.Normal { background-color: #A8A878; color: #fff; }
.starter-type.Fire { background-color: #F08030; color: #fff; }
.starter-type.Water { background-color: #6890F0; color: #fff; }
.starter-type.Electric { background-color: #F8D030; color: #000; }
.starter-type.Grass { background-color: #78C850; color: #fff; }
.starter-type.Ice { background-color: #98D8D8; color: #000; }
.starter-type.Fighting { background-color: #C03028; color: #fff; }
.starter-type.Poison { background-color: #A040A0; color: #fff; }
.starter-type.Ground { background-color: #E0C068; color: #000; }
.starter-type.Flying { background-color: #A890F0; color: #fff; }
.starter-type.Psychic { background-color: #F85888; color: #fff; }
.starter-type.Bug { background-color: #A8B820; color: #fff; }
.starter-type.Rock { background-color: #B8A038; color: #fff; }
.starter-type.Ghost { background-color: #705898; color: #fff; }
.starter-type.Dragon { background-color: #7038F8; color: #fff; }
.starter-type.Dark { background-color: #705848; color: #fff; }
.starter-type.Steel { background-color: #B8B8D0; color: #000; }
.starter-type.Fairy { background-color: #EE99AC; color: #000; }

.starter-attribute {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-right: 0.25rem;
    margin-bottom: 0.25rem;
    font-size: 0.8rem;
    font-weight: 600;
}

.starter-attribute.Vaccine { background-color: #78C850; color: #fff; }
.starter-attribute.Variable { background-color: #F8D030; color: #000; }
.starter-attribute.Virus { background-color: #F08030; color: #fff; }
.starter-attribute.Data { background-color: #6890F0; color: #fff; }
.starter-attribute.Free { background-color: #A8A878; color: #fff; }

.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
    background: rgba(30, 37, 50, 0.95);
    margin: 10% auto;
    padding: 2rem;
    border-radius: 16px;
    max-width: 500px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
}

.modal-header {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 1rem;
}

.modal-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--accent-color, #d4b3ff);
}

.modal-body {
    margin-bottom: 1.5rem;
}

.modal-footer {
    display: flex;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.close {
    color: rgba(255, 255, 255, 0.5);
    float: right;
    font-size: 1.5rem;
    font-weight: bold;
    cursor: pointer;
}

.close:hover,
.close:focus {
    color: #fff;
    text-decoration: none;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #fff;
    font-size: 1rem;
}

.form-control:focus {
    outline: none;
    border-color: var(--accent-color, #d4b3ff);
    box-shadow: 0 0 0 2px rgba(212, 179, 255, 0.2);
}

.btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-primary {
    background-color: var(--accent-color, #d4b3ff);
    color: #000;
}

.btn-primary:hover {
    background-color: #c49ef7;
}

.btn-secondary {
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
}

.btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.2);
}

@media (max-width: 768px) {
    .starter-grid {
        grid-template-columns: 1fr;
    }

    .modal-content {
        width: 90%;
        margin: 20% auto;
    }
}
</style>

<div class="container mt-8 mb-12">
    <div class="starter-container">
        <h1 class="starter-title text-4xl font-display font-bold">Roll Starters - Set <%= currentSet %> of 3</h1>
        <p class="starter-subtitle">Choose one starter from the options below. You'll get to choose 3 starters in total.</p>

        <div class="starter-grid">
            <% starters.forEach((starter, index) => { %>
                <div class="starter-card" onclick="openModal(<%= index %>)">
                    <div class="starter-card-header">
                        <h3 class="starter-card-title">
                            <% 
                                // Create a title from the species data names
                                const speciesNames = starter.speciesData.map(s => {
                                    if (s.species === 'Pokemon') return s.data.SpeciesName;
                                    if (s.species === 'Digimon') return s.data.name;
                                    if (s.species === 'Yokai') return s.data.Name;
                                    return s.species;
                                }).filter(Boolean);
                                
                                // Join with slashes
                                const title = speciesNames.join(' / ');
                            %>
                            <%= title %>
                        </h3>
                    </div>
                    <div class="starter-card-body">
                        <div class="starter-card-section">
                            <h4 class="starter-card-section-title">Species</h4>
                            <p>
                                <% starter.speciesData.forEach((s, i) => { %>
                                    <%= s.species %><%= i < starter.speciesData.length - 1 ? ', ' : '' %>
                                <% }); %>
                            </p>
                        </div>

                        <div class="starter-card-section">
                            <h4 class="starter-card-section-title">Types</h4>
                            <p>
                                <% if (starter.type1) { %><span class="starter-type <%= starter.type1 %>"><%= starter.type1 %></span><% } %>
                                <% if (starter.type2) { %><span class="starter-type <%= starter.type2 %>"><%= starter.type2 %></span><% } %>
                                <% if (starter.type3) { %><span class="starter-type <%= starter.type3 %>"><%= starter.type3 %></span><% } %>
                            </p>
                        </div>

                        <div class="starter-card-section">
                            <h4 class="starter-card-section-title">Attribute</h4>
                            <p>
                                <span class="starter-attribute <%= starter.attribute %>"><%= starter.attribute %></span>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<!-- Modal for claiming starter -->
<div id="starterModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2 class="modal-title" id="modalTitle">Claim Starter</h2>
        </div>
        <div class="modal-body">
            <form id="claimForm" action="/trainers/<%= trainer.id %>/claim-starter" method="POST">
                <input type="hidden" id="starterIndex" name="starterIndex" value="">
                
                <div class="form-group">
                    <label for="monsterName">Name your new monster:</label>
                    <input type="text" id="monsterName" name="monsterName" class="form-control" required>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Claim Starter</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Modal functionality
    const modal = document.getElementById('starterModal');
    const modalTitle = document.getElementById('modalTitle');
    const starterIndexInput = document.getElementById('starterIndex');
    
    function openModal(index) {
        // Get the starter data
        const starters = <%- JSON.stringify(starters) %>;
        const starter = starters[index];
        
        // Create title from species names
        const speciesNames = starter.speciesData.map(s => {
            if (s.species === 'Pokemon') return s.data.SpeciesName;
            if (s.species === 'Digimon') return s.data.name;
            if (s.species === 'Yokai') return s.data.Name;
            return s.species;
        }).filter(Boolean);
        
        const title = speciesNames.join(' / ');
        
        // Update modal title and starter index
        modalTitle.textContent = `Claim ${title}`;
        starterIndexInput.value = index;
        
        // Show the modal
        modal.style.display = 'block';
    }
    
    function closeModal() {
        modal.style.display = 'none';
    }
    
    // Close modal when clicking outside of it
    window.onclick = function(event) {
        if (event.target === modal) {
            closeModal();
        }
    }
</script>
