<% /* Set the title and other variables for the layout */ %>
<% title = title || `${trainer.name} - PC Boxes` %>
<div class="full-width-section">
    <div class="container">
        <span></span>
    </div>
</div>

<div class="full-width-content">
    <div class="trainer-page-layout">
        <!-- Side Navigation -->
        <% const active = 'pc'; %>
        <%- include('../partials/trainer_sidebar', { trainer, active }) %>

            <!-- Box Overview -->
            <div class="box-overview-section">
                <h3 class="text-xl font-display font-bold mb-2">Box Overview</h3>

                <!-- Box selector removed, only using arrow navigation now -->

                <!-- Box Overview Title with Box Number and Navigation Arrows -->
                <div class="box-overview-header">
                    <div class="box-overview-navigation">
                        <%
                        // Find the current box index in the boxNumbers array
                        let currentBoxIndex = 0;
                        let displayedBoxNumber = currentBox;

                        // If no specific box is selected, use the first box
                        if (displayedBoxNumber === null && boxNumbers.length > 0) {
                            displayedBoxNumber = boxNumbers[0];
                        }

                        // Find the index of the current box in the boxNumbers array
                        if (boxNumbers.length > 0) {
                            currentBoxIndex = boxNumbers.findIndex(num => num === displayedBoxNumber);
                            if (currentBoxIndex === -1) currentBoxIndex = 0;
                        }

                        // Calculate previous and next box indices
                        const prevBoxIndex = currentBoxIndex > 0 ? currentBoxIndex - 1 : boxNumbers.length - 1;
                        const nextBoxIndex = currentBoxIndex < boxNumbers.length - 1 ? currentBoxIndex + 1 : 0;

                        // Get the previous and next box numbers
                        const prevBoxNumber = boxNumbers[prevBoxIndex];
                        const nextBoxNumber = boxNumbers[nextBoxIndex];
                        %>

                        <% if (boxNumbers.length > 1) { %>
                            <a href="/trainers/<%= trainer.id %>/pc?box=<%= prevBoxNumber %>&boxPage=1&page=<%= pagination.page %>"
                               class="box-nav-arrow box-nav-prev" title="Previous Box">
                                &lt;
                            </a>
                        <% } else { %>
                            <span class="box-nav-arrow box-nav-prev disabled">&lt;</span>
                        <% } %>

                        <h4 class="box-overview-title">
                            <% if (displayedBoxNumber !== null && displayedBoxNumber !== -1) { %>
                                Box <%= displayedBoxNumber %>
                            <% } else { %>
                                No Boxes
                            <% } %>
                        </h4>

                        <% if (boxNumbers.length > 1) { %>
                            <a href="/trainers/<%= trainer.id %>/pc?box=<%= nextBoxNumber %>&boxPage=1&page=<%= pagination.page %>"
                               class="box-nav-arrow box-nav-next" title="Next Box">
                                &gt;
                            </a>
                        <% } else { %>
                            <span class="box-nav-arrow box-nav-next disabled">&gt;</span>
                        <% } %>
                    </div>

                    <!-- Monster count info removed -->
                </div>

                <!-- Box Grid -->
                <div class="box-grid">
                    <%
                    if (boxOverview && boxOverview.length > 0) {
                        // Calculate start and end indices for the current page
                        const startIndex = (boxPage - 1) * 30;
                        const endIndex = Math.min(startIndex + 30, boxOverview.length);

                        for (let i = startIndex; i < endIndex; i++) {
                            const monster = boxOverview[i];
                    %>
                        <div class="box-slot <%= monster ? 'filled' : 'empty' %>">
                            <% if (monster && monster.mon_id) { %>
                                <!-- Monster slot content -->
                                <a href="/trainers/<%= trainer.id %>/monsters/<%= monster.mon_id %>"
                                   title="<%= monster.name %> (Level <%= monster.level %>)">
                                    <img src="<%= monster.img_link || '/images/default_mon.png' %>"
                                         alt="<%= monster.name %>"
                                         onerror="this.src='/images/default_mon.png'">
                                    <div class="box-slot-overlay">
                                        <span class="box-slot-name"><%= monster.name %></span>
                                    </div>
                                </a>
                            <% } else { %>
                                <!-- Empty slot -->
                                <div class="empty-slot-placeholder">
                                    <img src="/images/default_mon.png" alt="Empty Slot" class="empty-slot-image">
                                </div>
                            <% } %>
                        </div>
                    <%
                        }
                    } else {
                    %>
                        <div class="empty-box-message">
                            <p>No monsters found in this box.</p>
                        </div>
                    <% } %>
                </div>

                <!-- Box Pagination (page numbers hidden) -->
                <div class="box-pagination">
                    <% if (boxPagination.totalPages > 1) { %>
                        <% if (boxPage > 1) { %>
                            <a href="/trainers/<%= trainer.id %>/pc?box=<%= currentBox %>&boxPage=<%= boxPage - 1 %>&page=<%= pagination.page %>"
                               class="box-page-arrow box-page-prev" title="Previous Page">&lt;</a>
                        <% } else { %>
                            <span class="box-page-arrow box-page-prev disabled">&lt;</span>
                        <% } %>

                        <% if (boxPage < boxPagination.totalPages) { %>
                            <a href="/trainers/<%= trainer.id %>/pc?box=<%= currentBox %>&boxPage=<%= boxPage + 1 %>&page=<%= pagination.page %>"
                               class="box-page-arrow box-page-next" title="Next Page">&gt;</a>
                        <% } else { %>
                            <span class="box-page-arrow box-page-next disabled">&gt;</span>
                        <% } %>
                    <% } %>
                </div>

                <!-- Go to Box Button -->
                <a href="/trainers/<%= trainer.id %>/pc?box=<%= currentBox || (boxNumbers.length > 0 ? boxNumbers[0] : 1) %>"
                   class="go-to-box-btn">Go to Box</a>

                <!-- Debug info removed -->
            </div>
        </div>

        <!-- Main Content -->
        <div class="trainer-main-content">
            <div class="pc-header">
                <h1 class="text-4xl font-display font-bold mb-4">
                    <%= trainer.name %>'s PC
                    <% if (currentBox !== null) { %>
                        - Box <%= currentBox %>
                    <% } %>
                </h1>

                <div class="box-filter">
                    <a href="/trainers/<%= trainer.id %>/pc" class="box-filter-link <%= currentBox === null ? 'active' : '' %>">All Boxes</a>
                    <% boxNumbers.forEach(boxNum => { %>
                        <% if (boxNum !== -1) { %> <!-- Skip battle box -->
                            <a href="/trainers/<%= trainer.id %>/pc?box=<%= boxNum %>"
                               class="box-filter-link <%= currentBox === boxNum ? 'active' : '' %>">
                                Box <%= boxNum %>
                            </a>
                        <% } %>
                    <% }) %>
                </div>

                <!-- Top Pagination Controls -->
                <% if (pagination.totalPages > 1) { %>
                <div class="pagination pagination-top">
                    <% if (pagination.page > 1) { %>
                        <a href="/trainers/<%= trainer.id %>/pc?<%= currentBox !== null ? 'box=' + currentBox + '&' : '' %>page=<%= pagination.page - 1 %>&boxPage=<%= boxPage %>"
                           class="pagination-link">Previous</a>
                    <% } %>

                    <%
                    // Show up to 5 page links
                    let startPage = Math.max(1, pagination.page - 2);
                    let endPage = Math.min(pagination.totalPages, startPage + 4);

                    // Adjust startPage if we're near the end
                    if (endPage - startPage < 4) {
                        startPage = Math.max(1, endPage - 4);
                    }

                    for (let i = startPage; i <= endPage; i++) {
                    %>
                        <a href="/trainers/<%= trainer.id %>/pc?<%= currentBox !== null ? 'box=' + currentBox + '&' : '' %>page=<%= i %>&boxPage=<%= boxPage %>"
                           class="pagination-link <%= pagination.page === i ? 'active' : '' %>"><%= i %></a>
                    <% } %>

                    <% if (pagination.page < pagination.totalPages) { %>
                        <a href="/trainers/<%= trainer.id %>/pc?<%= currentBox !== null ? 'box=' + currentBox + '&' : '' %>page=<%= pagination.page + 1 %>&boxPage=<%= boxPage %>"
                           class="pagination-link">Next</a>
                    <% } %>
                </div>
                <% } %>
            </div>

            <!-- Monster Grid -->
            <div class="monster-grid">
                <% if (monsters.length === 0) { %>
                    <div class="empty-box-message">
                        <p>No monsters found in this box.</p>
                    </div>
                <% } else { %>
                    <% monsters.forEach(monster => { %>
                        <a href="/trainers/<%= trainer.id %>/monsters/<%= monster.mon_id %>" class="monster-card-link">
                            <div class="monster-card">
                                <div class="monster-header">
                                    <h3><%= monster.name %></h3>
                                    <span class="monster-level">Level <%= monster.level %></span>
                                </div>
                                <div class="monster-image">
                                    <img src="<%= monster.img_link || '/images/default_mon.png' %>"
                                         alt="<%= monster.name %>"
                                         onerror="this.src='/images/default_mon.png'">
                                </div>
                                <div class="monster-info">
                                    <div class="species-container">
                                        <% if (monster.species1) { %><span class="species"><%= monster.species1 %></span><% } %>
                                        <% if (monster.species2) { %><span class="species"><%= monster.species2 %></span><% } %>
                                        <% if (monster.species3) { %><span class="species"><%= monster.species3 %></span><% } %>
                                    </div>
                                    <div class="type-container">
                                        <% if (monster.type1) { %>
                                        <span class="type <%= monster.type1.toLowerCase() %>"><%= monster.type1 %></span>
                                        <% } %>
                                        <% if (monster.type2) { %>
                                        <span class="type <%= monster.type2.toLowerCase() %>"><%= monster.type2 %></span>
                                        <% } %>
                                        <% if (monster.type3) { %>
                                        <span class="type <%= monster.type3.toLowerCase() %>"><%= monster.type3 %></span>
                                        <% } %>
                                    </div>
                                    <% if (monster.attribute) { %>
                                    <div class="attribute-container">
                                        <span class="attribute-badge attribute-<%= monster.attribute.toLowerCase() %>"><%= monster.attribute %></span>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                <% } %>
            </div>

            <!-- Pagination -->
            <% if (boxPagination.totalPages > 1) { %>
                <div class="pagination">
                    <% if (boxPagination.hasPrev) { %>
                        <a href="?box=<%= currentBox %>&boxPage=<%= boxPage - 1 %>" class="pagination-link">&laquo; Previous</a>
                    <% } %>

                    <span class="pagination-info">Page <%= boxPage %> of <%= boxPagination.totalPages %></span>

                    <% if (boxPagination.hasNext) { %>
                        <a href="?box=<%= currentBox %>&boxPage=<%= boxPage + 1 %>" class="pagination-link">Next &raquo;</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

