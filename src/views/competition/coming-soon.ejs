<% /* Set the title and other variables for the layout */ %>
<% title = competitionType %>

<div class="container mx-auto px-4 mt-6">
  <div class="location-banner relative overflow-hidden rounded-xl shadow-lg">
    <img src="https://i.imgur.com/cYMAGK8.jpeg" alt="Coming Soon Banner" class="w-full h-30 object-cover">
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent/30"></div>
    <div class="absolute inset-0 flex flex-col justify-end items-center pb-4">
      <h1 class="text-3xl font-display font-bold text-center mb-1 text-white text-shadow-xl"><%= competitionType %></h1>
      <p class="text-center text-sm mb-2 max-w-2xl mx-auto text-gray-200">Coming Soon!</p>
    </div>
  </div>
</div>

<main class="container mx-auto px-4 py-8">
  <div class="card bg-gray-800 border border-gray-700 rounded-lg overflow-hidden shadow-md p-8 text-center">
    <div class="flex flex-col items-center justify-center">
      <i class="fas fa-tools text-6xl text-amber-400 mb-6"></i>
      <h2 class="text-2xl font-bold mb-4">Under Construction</h2>
      <p class="text-gray-300 mb-6 max-w-2xl mx-auto">We're working hard to bring you the <%= competitionType %> feature. Please check back soon for updates!</p>
      <a href="/competition" class="btn-primary py-2 px-6 rounded transition-colors duration-300">
        <i class="fas fa-arrow-left mr-2"></i> Back to Competition Circuit
      </a>
    </div>
  </div>
</main>

<style>
.text-shadow {
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.text-shadow-lg {
  text-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
}

.text-shadow-xl {
  text-shadow: 0 6px 12px rgba(0, 0, 0, 0.9);
}

.btn-primary {
  background-color: var(--accent-color);
  color: var(--background-color);
  font-weight: 500;
  transition: all 0.2s;
}

.btn-primary:hover {
  background-color: var(--accent-hover);
  transform: translateY(-2px);
}
</style>
