<% /* Set the title and other variables for the layout */ %>
<% title = 'Competition Circuit' %>

<div class="container mx-auto px-4">
  <div>
    <img src="https://i.imgur.com/5cgcSGC.png" alt="Competition Banner" class="location-banner w-full object-cover">
    <div class="flex flex-col items-center">
      <h2 class="text-2xl font-display font-bold text-center">Competition Circuit</h2>
      <p class="text-center text-sm text-gray-200">Test your skills in various competitions and tournaments!</p>
    </div>
  </div>

  <div class="location-grid">
    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/cYMAGK8.jpeg" alt="Friendly Match" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Friendly Match</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Challenge other trainers to friendly matches.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/friendly" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-handshake mr-1"></i> Challenge
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/HViAPDq.jpeg" alt="Challenge League" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Challenge League</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Compete in the official league to earn badges and recognition.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/league" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-trophy mr-1"></i> Enter League
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/RmKySNO.png" alt="Challenge Frontier" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Challenge Frontier</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Test your skills in the challenging frontier facilities.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/frontier" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-mountain mr-1"></i> Enter Frontier
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/5cgcSGC.png" alt="Friendly Exhibition" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Friendly Exhibition</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Participate in exhibition matches to showcase your monsters.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/exhibition" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-eye mr-1"></i> Join Exhibition
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/HViAPDq.jpeg" alt="Enter Contest" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Enter Contest</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Enter your monsters in contests to show off their unique qualities.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/contest" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-star mr-1"></i> Enter Contest
          </a>
        </div>
      </div>
    </div>

    <div class="location-card">
      <div class="relative">
        <img src="https://i.imgur.com/cYMAGK8.jpeg" alt="Grand Festival" class="w-full h-48 object-cover rounded-t-lg">
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent rounded-t-lg"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white text-shadow-lg">Grand Festival</h3>
        </div>
      </div>
      <div class="location-card-content">
        <p class="text-sm text-gray-300 line-clamp-2">Participate in the prestigious Grand Festival to become a top coordinator.</p>
        <div class="flex justify-center mt-4">
          <a href="/competition/festival" class="btn-primary w-full text-center py-2 px-4 rounded text-sm">
            <i class="fas fa-crown mr-1"></i> Enter Festival
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.text-shadow {
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.text-shadow-lg {
  text-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
}

.text-shadow-xl {
  text-shadow: 0 6px 12px rgba(0, 0, 0, 0.9);
}

.btn-primary {
  background-color: var(--accent-color);
  color: var(--background-color);
  font-weight: 500;
  transition: all 0.2s;
}

.btn-primary:hover {
  background-color: var(--accent-hover);
  transform: translateY(-2px);
}
</style>

