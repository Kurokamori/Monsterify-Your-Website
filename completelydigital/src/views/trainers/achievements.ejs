<% /* Set the title and other variables for the layout */ %>
<% title = title || `${trainer.name} - Achievements` %>
<div class="full-width-section">
    <div class="container">
        <span></span>
    </div>
</div>

<div class="full-width-content">
    <div class="trainer-page-layout">
        <!-- Side Navigation -->
        <div class="trainer-sidebar">
            <div class="sidebar-nav">
                <a href="/trainers/<%= trainer.id %>" class="sidebar-link">Profile</a>
                <a href="/trainers/<%= trainer.id %>/pc" class="sidebar-link">PC Boxes</a>
                <a href="/trainers/<%= trainer.id %>/boxes" class="sidebar-link">All Boxes</a>
                <a href="/trainers/<%= trainer.id %>/inventory" class="sidebar-link">Inventory</a>
                <a href="/trainers/<%= trainer.id %>/stats" class="sidebar-link">Stats</a>
                <a href="/trainers/<%= trainer.id %>/achievements" class="sidebar-link active">Achievements</a>

                <% if (locals.user && locals.user.discord_id && trainer.player_user_id && locals.user.discord_id.toString() === trainer.player_user_id) { %>
                    <div class="sidebar-divider"></div>
                    <a href="/trainers/<%= trainer.id %>/edit" class="sidebar-link">Edit Trainer</a>
                <% } %>
            </div>
        </div>

        <!-- Main Content -->
        <div class="trainer-content">
            <div class="trainer-header">
                <h1 class="trainer-name"><%= trainer.name %>'s Achievements</h1>
                <div class="trainer-level">
                    Level <%= trainer.level || 1 %>
                </div>
            </div>

            <div class="achievements-container">
                <div class="coming-soon-message">
                    <div class="coming-soon-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <h2>Achievements Coming Soon!</h2>
                    <p>We're working on an exciting achievement system for trainers. Check back later to start earning badges, trophies, and special rewards for your accomplishments!</p>
                    
                    <div class="achievement-preview">
                        <h3>Achievement Preview</h3>
                        <div class="achievement-grid">
                            <div class="achievement-card locked">
                                <div class="achievement-icon">
                                    <i class="fas fa-dragon"></i>
                                </div>
                                <div class="achievement-info">
                                    <h4>Monster Collector</h4>
                                    <p>Catch 50 different species of monsters</p>
                                </div>
                            </div>
                            
                            <div class="achievement-card locked">
                                <div class="achievement-icon">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="achievement-info">
                                    <h4>Rising Star</h4>
                                    <p>Reach trainer level 25</p>
                                </div>
                            </div>
                            
                            <div class="achievement-card locked">
                                <div class="achievement-icon">
                                    <i class="fas fa-palette"></i>
                                </div>
                                <div class="achievement-info">
                                    <h4>Art Enthusiast</h4>
                                    <p>Reference 100% of your monsters</p>
                                </div>
                            </div>
                            
                            <div class="achievement-card locked">
                                <div class="achievement-icon">
                                    <i class="fas fa-gem"></i>
                                </div>
                                <div class="achievement-info">
                                    <h4>Treasure Hunter</h4>
                                    <p>Collect 10 rare items</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .trainer-page-layout {
        display: flex;
        gap: 2rem;
    }

    .trainer-sidebar {
        width: 250px;
        flex-shrink: 0;
    }

    .trainer-content {
        flex-grow: 1;
    }

    .sidebar-nav {
        background-color: var(--card-background);
        border-radius: 0.5rem;
        padding: 1rem;
        position: sticky;
        top: 6rem;
    }

    .sidebar-link {
        display: block;
        padding: 0.75rem 1rem;
        color: var(--text-color);
        text-decoration: none;
        border-radius: 0.375rem;
        margin-bottom: 0.5rem;
        transition: background-color 0.2s;
    }

    .sidebar-link:hover {
        background-color: var(--nav-hover);
    }

    .sidebar-link.active {
        background-color: var(--nav-active);
        color: var(--accent-color);
        font-weight: bold;
    }

    .sidebar-divider {
        height: 1px;
        background-color: var(--divider-color);
        margin: 1rem 0;
    }

    .trainer-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .trainer-name {
        font-size: 2rem;
        font-weight: bold;
        color: var(--accent-color);
    }

    .trainer-level {
        font-size: 1.25rem;
        color: var(--accent-color);
        background-color: var(--card-background);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
    }

    .achievements-container {
        background-color: var(--card-background);
        border-radius: 0.5rem;
        padding: 2rem;
    }

    .coming-soon-message {
        text-align: center;
        padding: 3rem 1rem;
    }

    .coming-soon-icon {
        font-size: 4rem;
        color: var(--accent-color);
        margin-bottom: 1.5rem;
        opacity: 0.7;
    }

    .coming-soon-message h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--accent-color);
    }

    .coming-soon-message p {
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto 2rem;
        color: var(--text-color);
        opacity: 0.8;
    }

    .achievement-preview {
        margin-top: 3rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .achievement-preview h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: var(--text-color);
    }

    .achievement-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .achievement-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        background-color: var(--background-color);
        padding: 1rem;
        border-radius: 0.5rem;
        transition: transform 0.2s;
    }

    .achievement-card:hover {
        transform: translateY(-3px);
    }

    .achievement-card.locked {
        opacity: 0.7;
        position: relative;
    }

    .achievement-card.locked::after {
        content: "LOCKED";
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        background-color: rgba(0, 0, 0, 0.6);
        color: #fff;
        padding: 0.2rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.7rem;
        font-weight: bold;
    }

    .achievement-icon {
        width: 50px;
        height: 50px;
        background-color: var(--nav-active);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--accent-color);
        flex-shrink: 0;
    }

    .achievement-info {
        flex-grow: 1;
    }

    .achievement-info h4 {
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .achievement-info p {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .full-width-section {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        padding: 3rem 0;
        background-image: linear-gradient(to bottom, rgba(30, 37, 50, 0.8), rgba(17, 19, 25, 0.9));
    }

    .full-width-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    @media (max-width: 768px) {
        .trainer-page-layout {
            flex-direction: column;
        }

        .trainer-sidebar {
            width: 100%;
        }

        .sidebar-nav {
            position: static;
        }

        .achievement-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
